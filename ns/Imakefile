PROC(Cns_oracle_ifce)
MakeDir(LogPath,0755)
NSORALIBS= -L$(ORACLE_HOME)/lib -lclntsh

NormalProgramTarget(nsd,$(NSD_OBJS),,$(NSORALIBS) $(NSLIBCSEC),750)
