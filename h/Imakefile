COMM 		Makefile for CASTOR includes             GENERIC
 
#include <Project.tmpl>

TOPINCLUDE=InstallIncludeDir
DESTDIRCASTOR=FileName($(TOPINCLUDE),shift)
MANPAGES = $(FILMANDIR)/Castor_limits.$(FILMANSUFFIX) \
	   $(LIBMANDIR)/serrno.$(LIBMANSUFFIX) \
	   $(LIBMANDIR)/sacct.$(LIBMANSUFFIX) 
EXPORTMANPAGES = $(EXPORTMAN)/man4/Castor_limits.$(FILMANSUFFIX) \
	   $(EXPORTMAN)/man3/serrno.$(LIBMANSUFFIX) \
	   $(EXPORTMAN)/man3/sacct.$(LIBMANSUFFIX)
ICOMMON_H = \
	 FileName($(DESTDIRCASTOR),Castor_limits.h) FileName($(DESTDIRCASTOR),Cgetopt.h) \
	 FileName($(DESTDIRCASTOR),sacct.h) \
	 FileName($(DESTDIRCASTOR),Cglobals.h) FileName($(DESTDIRCASTOR),Cnetdb.h) \
	 FileName($(DESTDIRCASTOR),Cpool_api.h) FileName($(DESTDIRCASTOR),Cpwd.h) \
	 FileName($(DESTDIRCASTOR),Cregexp.h) FileName($(DESTDIRCASTOR),Cregexp_magic.h) \
	 FileName($(DESTDIRCASTOR),Csched_api.h) FileName($(DESTDIRCASTOR),Csched_flags.h) \
	 FileName($(DESTDIRCASTOR),Csetprocname.h) \
	 FileName($(DESTDIRCASTOR),Cthread_api.h) FileName($(DESTDIRCASTOR),Cthread_flags.h) \
	 FileName($(DESTDIRCASTOR),common.h) \
	 FileName($(DESTDIRCASTOR),getacct.h) FileName($(DESTDIRCASTOR),getacctent.h) \
	 FileName($(DESTDIRCASTOR),log.h) FileName($(DESTDIRCASTOR),marshall.h) \
	 FileName($(DESTDIRCASTOR),net.h) FileName($(DESTDIRCASTOR),osdep.h) \
	 FileName($(DESTDIRCASTOR),patchlevel.h) FileName($(DESTDIRCASTOR),serrno.h) \
	 FileName($(DESTDIRCASTOR),socket_timeout.h) FileName($(DESTDIRCASTOR),trace.h) \
	 FileName($(DESTDIRCASTOR),u64subr.h) FileName($(DESTDIRCASTOR),ypgetacctent.h) \
	 FileName($(TOPINCLUDE),shift.h) \
	 FileName($(DESTDIRCASTOR),stager_api.h) \
	 FileName($(DESTDIRCASTOR),stager_admin_api.h) \
	 FileName($(DESTDIRCASTOR),stager_client_api.h) \
	 FileName($(DESTDIRCASTOR),stager_service_api.h)
ECOMMON_H = \
	 $(EXPORTH)/Castor_limits.h $(EXPORTH)/Cgetopt.h \
	 $(EXPORTH)/sacct.h \
	 $(EXPORTH)/Cglobals.h $(EXPORTH)/Cnetdb.h \
	 $(EXPORTH)/Cpool_api.h $(EXPORTH)/Cpwd.h \
	 $(EXPORTH)/Cregexp.h $(EXPORTH)/Cregexp_magic.h \
	 $(EXPORTH)/Csched_api.h $(EXPORTH)/Csched_flags.h \
	 $(EXPORTH)/Csetprocname.h \
	 $(EXPORTH)/Cthread_api.h $(EXPORTH)/Cthread_flags.h \
	 $(EXPORTH)/common.h \
	 $(EXPORTH)/getacct.h $(EXPORTH)/getacctent.h \
	 $(EXPORTH)/log.h $(EXPORTH)/marshall.h \
	 $(EXPORTH)/net.h $(EXPORTH)/osdep.h \
	 $(EXPORTH)/patchlevel.h $(EXPORTH)/serrno.h \
	 $(EXPORTH)/socket_timeout.h $(EXPORTH)/trace.h \
	 $(EXPORTH)/u64subr.h $(EXPORTH)/ypgetacctent.h \
	 $(EXPORTINC)/shift.h \
	 $(EXPORTINC)/stager_api.h \
	 $(EXPORTINC)/stager_admin_api.h \
	 $(EXPORTINC)/stager_client_api.h \
	 $(EXPORTINC)/stager_service_api.h
#if BuildDbClient
IDB_H = \
	 FileName($(DESTDIRCASTOR),Cdb_api.h)
EDB_H = \
	 $(EXPORTH)/Cdb_api.h
#endif
#if BuildNameServerClient || BuildNameServerLibrary
INS_H = \
	 FileName($(DESTDIRCASTOR),Cns_api.h) FileName($(DESTDIRCASTOR),Cns_constants.h)
ENS_H = \
	 $(EXPORTH)/Cns_api.h $(EXPORTH)/Cns_constants.h
#endif
#if BuildRfioClient
IRFIO_H = \
	 FileName($(DESTDIRCASTOR),rfcntl.h) FileName($(DESTDIRCASTOR),rfio.h) \
	 FileName($(DESTDIRCASTOR),rfio_api.h) FileName($(DESTDIRCASTOR),rfio_constants.h) \
	 FileName($(DESTDIRCASTOR),rfio_errno.h)
ERFIO_H = \
	 $(EXPORTH)/rfcntl.h $(EXPORTH)/rfio.h \
	 $(EXPORTH)/rfio_api.h $(EXPORTH)/rfio_constants.h \
	 $(EXPORTH)/rfio_errno.h
#endif
#if BuildRtcopyClient
IRTCP_H = \
	 FileName($(DESTDIRCASTOR),rtcp.h) FileName($(DESTDIRCASTOR),rtcp_api.h) \
	 FileName($(DESTDIRCASTOR),rtcp_constants.h)
ERTCP_H = \
	 $(EXPORTH)/rtcp.h $(EXPORTH)/rtcp_api.h \
	 $(EXPORTH)/rtcp_constants.h
#endif
#if BuildStageClient
ISTAGE_H = \
	 FileName($(DESTDIRCASTOR),stage_api.h) FileName($(DESTDIRCASTOR),stage_constants.h) \
	 FileName($(DESTDIRCASTOR),stage_limits.h) \
	 FileName($(DESTDIRCASTOR),stage_macros.h) FileName($(DESTDIRCASTOR),stage_messages.h) \
	 FileName($(DESTDIRCASTOR),stage_protocol.h) FileName($(DESTDIRCASTOR),stage_struct.h)
ESTAGE_H = \
	 $(EXPORTH)/stage_api.h $(EXPORTH)/stage_constants.h \
	 $(EXPORTH)/stage_limits.h \
	 $(EXPORTH)/stage_macros.h $(EXPORTH)/stage_messages.h \
	 $(EXPORTH)/stage_protocol.h $(EXPORTH)/stage_struct.h
#endif
#if BuildTapeClient
ITAPE_H = \
	 FileName($(DESTDIRCASTOR),Ctape_api.h) FileName($(DESTDIRCASTOR),Ctape_constants.h)
ETAPE_H = \
	 $(EXPORTH)/Ctape_api.h $(EXPORTH)/Ctape_constants.h
#endif
#if BuildVdqmClient
IVDQM_H = \
	 FileName($(DESTDIRCASTOR),vdqm.h) FileName($(DESTDIRCASTOR),vdqm_api.h) \
	 FileName($(DESTDIRCASTOR),vdqm_constants.h)
EVDQM_H = \
	 $(EXPORTH)/vdqm.h $(EXPORTH)/vdqm_api.h \
	 $(EXPORTH)/vdqm_constants.h
#endif
#if BuildVolumeMgrClient
IVMGR_H = \
	 FileName($(DESTDIRCASTOR),vmgr_api.h) FileName($(DESTDIRCASTOR),vmgr_constants.h) \
	 FileName($(DESTDIRCASTOR),vmgr_struct.h)
EVMGR_H = \
	 $(EXPORTH)/vmgr_api.h $(EXPORTH)/vmgr_constants.h \
	 $(EXPORTH)/vmgr_struct.h
#endif
#if _WIN32
IWIN_H = \
	 FileName($(DESTDIRCASTOR),dirent.h) FileName($(DESTDIRCASTOR),statbits.h) \
	 FileName($(DESTDIRCASTOR),syslog.h)
#endif

all:

#if _WIN32
dirent.h:	..\win32\dirent.h
	RemoveFile(dirent.h)
	copy ..\win32\dirent.h dirent.h
statbits.h:	..\win32\statbits.h
	RemoveFile(statbits.h)
	copy ..\win32\statbits.h statbits.h
syslog.h:	..\win32\syslog.h
	RemoveFile(syslog.h)
	copy ..\win32\syslog.h syslog.h
#endif

install: $(TOPINCLUDE) $(DESTDIRCASTOR) \
	 $(ICOMMON_H) $(IDB_H) $(INS_H) $(IRFIO_H) $(IRTCP_H) $(ISTAGE_H) \
	 $(ITAPE_H) $(IVDQM_H) $(IVMGR_H) $(IWIN_H)

export:

exportman: $(EXPORTMANPAGES)

exportshr: \
	 $(ECOMMON_H) $(EDB_H) $(ENS_H) $(ERFIO_H) $(ERTCP_H) $(ESTAGE_H) \
	 $(ETAPE_H) $(EVDQM_H) $(EVMGR_H)

