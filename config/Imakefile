COMM		Make config files

#include <Project.tmpl>

CONFIG_OBJS = castor.example castor_compiler.example castor_db.example castor_paths.example castor_env.example
ICONFIG_OBJS = FileName($(CONFIGDIR),castor.example) FileName($(CONFIGDIR),castor_compiler.example) FileName($(CONFIGDIR),castor_db.example) FileName($(CONFIGDIR),castor_paths.example) FileName($(CONFIGDIR),castor_env.example)

all:

install: $(DESTDIR)$(CONFIGDIR) $(ICONFIG_OBJS)

export:

exportman:

exportshr:

install.man:

clobber:

Makefiles:

clean:

MakeDir($(DESTDIR)$(CONFIGDIR),root,bin,0755)

InstallNonExecFile(castor.example,$(CONFIGDIR),root,bin,0644)
InstallNonExecFile(castor_compiler.example,$(CONFIGDIR),root,bin,0644)
InstallNonExecFile(castor_db.example,$(CONFIGDIR),root,bin,0644)
InstallNonExecFile(castor_paths.example,$(CONFIGDIR),root,bin,0644)
InstallNonExecFile(castor_env.example,$(CONFIGDIR),root,bin,0644)
