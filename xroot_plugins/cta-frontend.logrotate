/var/log/cta/cta-frontend.log {
    daily
    missingok
    rotate 500
    compress
    delaycompress
    endscript
}

/var/log/cta/cta-frontend-xrootd.log {
    daily
    missingok
    rotate 500
    copytruncate
    create 755 cta tape
    compress
    delaycompress
}
