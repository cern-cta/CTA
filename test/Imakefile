COMM		Make CASTOR tests

#include <Project.tmpl>

SUBDIRS = $(COMMONDIR) $(DBDIR) $(MSGDIR) $(NSDIR) $(RFIODIR) \
	  $(SYSREQDIR) $(RTCOPYDIR) $(STAGEDIR) $(TAPEDIR) $(VDQMDIR) \
	  $(VMGRDIR) $(COPYTAPEDIR)

MakeSubdirs(all,$(SUBDIRS))
MakeSubdirs(clean,$(SUBDIRS))
MakeSubdirs(clobber,$(SUBDIRS))

#if defined(_WIN32)
Makefiles:
	@for %i in ( $(SUBDIRS) ) \
	do @(echo test\\%i - & cd %i & \
		..\..\imake\imake -I..\..\config & \
		$(MAKE) $(MFLAGS) $@ & cd .. )

depend:
	@echo Not supported on this platform
#else
Makefiles:
	@. ../setosflags ;\
	for i in $(SUBDIRS) ;\
	do (echo " test/$$i:" ; cd $$i ;\
		../../imake/imake -I../../config -DOSMajorVersion="$$OSMAJNO" -DOSMinorVersion="$$OSMINNO" ;\
		$(MAKE) $(MFLAGS) $@ \
	) ; done ;

depend:
	for i in $(SUBDIRS) ;\
	do (echo " test/$$i:" ; cd $$i ;\
		$(MAKE) $(MFLAGS) $@ \
	) ; done ;
#endif
