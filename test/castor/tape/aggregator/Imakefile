CPPFLAGS = -g -O0 -I../../../../h -I../../../.. $(MTCCFLAGS)
CFLAGS = -O -I../../../../h -I../../../.. $(THREADFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../../../castor,castorclient)
DependsOnLibrary(../../../castor/db/cnv,castorcnvs)
DependsOnLibrary(../../../castor/tape/utils,castortapeutils)
DependsOnLibrary(../../../common,castorcommon)
DependsOnLibrary(../../../dlf,castordlf)
DependsOnLibrary(../../../vdqm,castorvdqm)
DependsOnLibrary(../../../vmgr,castorvmgr)

TAPE_AGGREGATOR_SRCS = \
  ../../../../castor/tape/aggregator/LogHelper.cpp \
  ../../../../castor/tape/aggregator/LegacyTxRx.cpp \
  ../../../../castor/tape/aggregator/VmgrTxRx.cpp

TAPE_LEGACYMSG_SRCS = \
  ../../../../castor/tape/legacymsg/CommonMarshal.cpp \
  ../../../../castor/tape/legacymsg/VmgrMarshal.cpp

TAPE_NET_SRCS = \
  ../../../../castor/tape/net/net.cpp

TESTAGGREGATORBIN_SRCS = \
  TestAggregatorMain.cpp \
  $(TAPE_AGGREGATOR_SRCS) \
  $(TAPE_LEGACYMSG_SRCS) \
  $(TAPE_NET_SRCS)

TESTAGGREGATORBIN_OBJS = $(TESTAGGREGATORBIN_SRCS:.cpp=.Osuf)

NormalProgramTarget(testaggregator,$(TESTAGGREGATORBIN_OBJS),$(DEPLIB),$(LIBS),750)
