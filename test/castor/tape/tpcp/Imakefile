CPPFLAGS = -g -O0 -I../../../../h -I../../../.. $(MTCCFLAGS)
CFLAGS = -O -I../../../../h -I../../../.. $(THREADFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../../../castor,castorclient)
DependsOnLibrary(../../../castor/db/cnv,castorcnvs)
DependsOnLibrary(../../../common,castorcommon)
DependsOnLibrary(../../../dlf,castordlf)
DependsOnLibrary(../../../vdqm,castorvdqm)
DependsOnLibrary(../../../vmgr,castorvmgr)

TAPE_UTILS_SRCS = \
  ../../../../castor/tape/utils/ScopedLock.cpp \
  ../../../../castor/tape/utils/SmartFd.cpp \
  ../../../../castor/tape/utils/SmartFdList.cpp \
  ../../../../castor/tape/utils/SmartFILEPtr.cpp \
  ../../../../castor/tape/utils/utils.cpp

TAPE_TPCP_SRCS = \
  ../../../../castor/tape/tpcp/TapeFseqRange.cpp\
  ../../../../castor/tape/tpcp/TapeFseqRangeListSequence.cpp\
  ../../../../castor/tape/tpcp/TapeFseqRangeSequence.cpp

TESTTPCPBIN_SRCS = \
  TestTpcpMain.cpp \
  $(TAPE_UTILS_SRCS)\
  $(TAPE_TPCP_SRCS)

