CPPFLAGS = -g -O0 -I../../../../h -I../../../.. $(PYTHONINC) $(MTCCFLAGS)
CFLAGS = -O -I../../../../h -I../../../.. $(THREADFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++
LIBS = $(PYTHONLIBS)

DependsOnLibrary(../../../castor,castorclient)
DependsOnLibrary(../../../castor/db/cnv,castorcnvs)
DependsOnLibrary(../../../castor/tape/python,castortapepython)
DependsOnLibrary(../../../castor/tape/utils,castortapeutils)
DependsOnLibrary(../../../common,castorcommon)
DependsOnLibrary(../../../dlf,castordlf)
DependsOnLibrary(../../../vdqm,castorvdqm)
DependsOnLibrary(../../../vmgr,castorvmgr)

TESTTAPEPYTHONBIN_SRCS = \
  TestPythonMain.cpp

TESTTAPEPYTHONBIN_OBJS = $(TESTTAPEPYTHONBIN_SRCS:.cpp=.Osuf)

NormalProgramTarget(testpython,$(TESTTAPEPYTHONBIN_OBJS),$(DEPLIB),$(LIBS),750)
