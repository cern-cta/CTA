#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(../../..,h) -I FileName(../../..,)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

LIBS = -lshift
#if BuildSecurity
LIBS+= -ldl
#endif
TEST_OBJ = testio.Osuf

DEPLIB = DepSharedLibraryTargetName(../../shlib,shift)

LDFLAGS = -L ../../../shlib $(MTCCFLAGS)
LD = g++

all: ProgramTargetName(testio) ProgramTargetName(testSocket) ProgramTargetName(testAuthSocket)

NormalProgramTarget(testio,$(TEST_OBJ),$(DEPLIB),$(LIBS))
NormalProgramTarget(testSocket,testSocket.Osuf,$(DEPLIB),$(LIBS))
NormalProgramTarget(testAuthSocket,testAuthSocket.Osuf,$(DEPLIB),$(LIBS))

Makefiles:

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(testio))

#if _WIN32
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(DFLAGS) -Y../../../h -Y../../.. *.cpp 2> /dev/null
#endif
