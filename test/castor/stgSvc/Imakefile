#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(../../..,h) -I FileName(../../..,)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

LIBS = -lshift -lcastorCommonOra

TEST_OBJ = teststgsvc.Osuf
TEST2_OBJ = testRemStgSvc.Osuf

DEPLIB = DepSharedLibraryTargetName(../../shlib,shift) \
         DepSharedLibraryTargetName(../../shlib,castorCommonOra)

LDFLAGS = -L ../../../shlib
LD = g++

all: ProgramTargetName(teststgsvc) ProgramTargetName(testRemStgSvc)

NormalProgramTarget(teststgsvc,$(TEST_OBJ),$(DEPLIB),$(LIBS))
NormalProgramTarget(testRemStgSvc,$(TEST2_OBJ),$(DEPLIB),$(LIBS))

Makefiles:

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(teststgsvc))

#if _WIN32
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(DFLAGS) -Y../../../h -Y../../.. *.cpp 2> /dev/null
#endif
