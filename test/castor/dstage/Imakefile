#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(FileName(..,FileName(..,..)),h) -I FileName(..,FileName(..,..))
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

LIBS = -lshift -lcastorCommonOra $(MTLDLIBS)

RRTEST_SRCS = RrTest.Osuf \
              ../../../castor/replier/RequestReplier.Osuf \
              ../../../castor/replier/ClientConnection.Osuf

RRTEST_OBJS = $(RRTEST_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(FileName(../..,shlib),shift) \
         DepSharedLibraryTargetName(FileName(../..,shlib),castorCommonOra)

LDFLAGS = -L FileName(FileName(..,FileName(..,..)),shlib) 
LD = g++

all:: ProgramTargetName(RrTest)

NormalProgramTarget(RrTest,$(RRTEST_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(FileName(../..,shlib),shift)
MakeDepSharedLibrary(FileName(../..,shlib),castorCommonOra)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(RRTEST_SRCS) 2> /dev/null
#endif

install:

exportman:

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(RrTest))

FORCE:

