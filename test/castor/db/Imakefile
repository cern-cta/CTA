#if !defined(_WIN32)
#if linux
DEBUG  = -g -O
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(../../..,h) -I FileName(../../..,)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

LIBS = -lcastorClient -lcastorCommonOra

RHBIN_OBJ = testdb.Osuf

DEPLIB = DepSharedLibraryTargetName(../../castor,castorClient) \
         DepSharedLibraryTargetName(../../castor/db/ora,castorCommonOra)

LDFLAGS = -L ../../../castor -L ../../../castor/db/ora
LD = g++

all: ProgramTargetName(testdb)

NormalProgramTarget(testdb,$(RHBIN_OBJ),$(DEPLIB),$(LIBS))

Makefiles:

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(testdb))
