COMM 	Make clips programs.

#include <Project.tmpl>

SPOOL = PolicySpool

IPROGS_CLIPS = FileName($(SPOOL),bestfs.clp) FileName($(SPOOL),castor.clp) FileName($(SPOOL),castorweight.clp) FileName($(SPOOL),replica.pl) FileName($(SPOOL),fs_capabilities.clp) FileName($(SPOOL),fs_garbage.clp) FileName($(SPOOL),recaller.pl) FileName($(SPOOL),migrator.pl) FileName($(SPOOL),recallerRetryPolicy.pl) FileName($(SPOOL),migratorRetryPolicy.pl)

all:

install: $(SPOOL) $(IPROGS_CLIPS)

MakeDir($(SPOOL),root,bin,0755)
InstallNonExecFile(bestfs.clp,$(SPOOL),root,bin,0644)
InstallNonExecFile(castor.clp,$(SPOOL),root,bin,0644)
InstallNonExecFile(fs_capabilities.clp,$(SPOOL),root,bin,0644)
InstallNonExecFile(fs_garbage.clp,$(SPOOL),root,bin,0644)
InstallNonExecFile(castorweight.clp,$(SPOOL),root,bin,0644)
InstallNonExecFile(recaller.pl,$(SPOOL),root,bin,0644)
InstallNonExecFile(migrator.pl,$(SPOOL),root,bin,0644)
InstallNonExecFile(recallerRetryPolicy.pl,$(SPOOL),root,bin,0644)
InstallNonExecFile(migratorRetryPolicy.pl,$(SPOOL),root,bin,0644)
InstallNonExecFile(replica.pl,$(SPOOL),root,bin,0644)

install.man:

export:

exportman:

COMM###################### CLEANING RULES #######################

clean:
clobber:
depend:
Makefiles:
FORCE:

COMM DO NOT DELETE THIS LINE -- make  depend  depends  on  it.
