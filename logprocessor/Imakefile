COMM Makefile for the Log Processor Daemon
COMM
COMM @author Castor Dev team, castor-dev@cern.ch

LIBNOARCHDIR = InstallLibNoArchDir

InstallTarget(logprocessord,755)
InstallNonExecFile(DLF.py,$(LIBNOARCHDIR)/log-processor,644)
InstallNonExecFile(LoggingCommon.py,$(LIBNOARCHDIR)/log-processor,644)
MakeDir(LogPath,0755)
MakeDir(/var/log/dlf,0755)
LOGROTATE(castor-logprocessor-server,install)
SYSCONFIG(logprocessord,install)
INITSCRIPT(logprocessord,install)
CONFIGFILE(DLF,install)
EXAMPLEFILE(logprocessord.conf,/etc/castor,install)
