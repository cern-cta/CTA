#include <Project.tmpl>

DEBUG  = -g -O0


INCLUDES = -I FileName($(ORACLE_HOME)/rdbms,public) -I FileName(FileName(..,..),h) -I FileName(..,..)
CASTOR_HOME = ../..
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) -DORACDBC=1 $(PYTHONINC)

#ifdef _WIN32
EXTSHARED=dll
#else
EXTSHARED=so
#endif

POLICYLIB_SRCS = CnsInfoMigrationPolicy.cpp \
	DbInfoMigrationPolicy.cpp \
	DbInfoRecallPolicy.cpp \
	DbInfoStreamPolicy.cpp \
	MigrationPySvc.cpp \
        StreamPySvc.cpp \
	PolicyObj.cpp \
	PySvc.cpp \
	RecallPySvc.cpp \
	ora/OraPolicySvc.cpp

LIBS = -lshift -lcastorCommonOra -lcastorCnvs -L$(ORACLE_HOME)/lib -locci

DEPLIB = DepSharedLibraryTargetName(FileName(..,shlib),shift)

POLICYLIB_OBJS = $(POLICYLIB_SRCS:.cpp=.Osuf)
COMMONLIB = LibraryTargetName(castorInfoPolicy)
GLOBLIB = DepSharedLibraryTargetName(shlib,shift)

LDFLAGS += $(DEBUG) $(MTLDFLAGS)
LD = g++

all: $(COMMONLIB)

NormalLibraryTarget(castorInfoPolicy,$(POLICYLIB_OBJS))

MakeDepSharedLibrary(../../shlib,castorCommonOra)
MakeDepSharedLibrary(../../shlib,castorCnvs)
MakeDepSharedLibrary(../../shlib,shift)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(POLICYLIB_SRCS) 2> /dev/null
#endif

clean:
	@echo cleaning in CurDir
	-@RemoveFiles($(POLICYLIB_OBJS))

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(COMMONLIB))

FORCE:

