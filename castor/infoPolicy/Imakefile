CPPFLAGS = -g -O0 -I $(ORACLE_HOME)/rdbms/public -I ../../h -I ../.. $(MTCCFLAGS) $(PYTHONINC)
LDFLAGS += -g -O0 $(MTLDFLAGS)
LD = g++
LIBS = 

DependsOnLibrary(../common,castorcommon)
DependsOnLibrary(,castorclient)

POLICYLIB_SRCS = MigrationPolicyElement.cpp \
	RecallPolicyElement.cpp \
	StreamPolicyElement.cpp \
	RetryPolicyElement.cpp \
	MigrationPySvc.cpp \
        StreamPySvc.cpp \
	PolicyObj.cpp \
	PySvc.cpp \
	RecallPySvc.cpp \
	TapeRetryPySvc.cpp
POLICYLIB_OBJS = $(POLICYLIB_SRCS:.cpp=.Osuf)
SharedLibraryTarget(castorinfopolicy,$(POLICYLIB_OBJS),$(DEPLIB),$(LIBS))
