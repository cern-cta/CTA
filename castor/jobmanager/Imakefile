# Makefile for the CASTOR2 Job submission daemon
#
# @author Castor Dev team, castor-dev@cern.ch

MANPAGES = FileName($(MANDIR),jobManager.$(MANSUFFIX))
EXPORTMANPAGES = FileName($(EXPORTMAN),FileName(man$(MANSUFFIX),jobManager.$(MANSUFFIX)))
CPPFLAGS = -g -O0 -I $(ORACLE_HOME)/rdbms/public -I ../../h -I ../.. $(MTCCFLAGS) -DSTAGERSUPERUSER=\"stage\" -DSTAGERSUPERGROUP=\"st\"
LIBS = -ldl -lbat -llsf -llsbstream -L$(ORACLE_HOME)/lib -locci -lclntsh
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../common,castorcommon)
DependsOnLibrary(../dlf,castordlf)
DependsOnLibrary(,castorclient)
DependsOnLibrary(db/newora,castorcommonora)
DependsOnLibrary(db/cnv,castorcnvs)

JOBMANAGER_SRCS = JobManagerDaemon.cpp ManagementThread.cpp DispatchThread.cpp SubmissionProcess.cpp JobSubmissionRequest.cpp DiskServerResource.cpp FileSystemResource.cpp ../io/StreamJobSubmissionRequestCnv.cpp ora/OraJobManagerSvc.cpp
JOBMANAGER_OBJS = $(JOBMANAGER_SRCS:.cpp=.Osuf)
NormalProgramTarget(jobManager,$(JOBMANAGER_OBJS),$(DEPLIB),$(LIBS),750)
MakeDir(/var/spool/jobmanager,0755)
ADMMANPAGE(jobManager)
LOGROTATE(castor-jobmanager-server,../..,install)
SYSCONFIG(jobManager,install)
INITSCRIPT(jobManager,install)
