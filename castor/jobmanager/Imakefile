# Makefile for the CASTOR2 Job submission daemon
#
# @author Dennis Waldron

#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

#ifdef StagerSuperUser
STAGERSUPERUSER0 = StagerSuperUser
#else
STAGERSUPERUSER0 = stage
#endif
#ifdef StagerSuperGroup
STAGERSUPERGROUP0 = StagerSuperGroup
#else
STAGERSUPERGROUP0 = st
#endif
STAGERSUPERUSER  = -DSTAGERSUPERUSER=\"$(STAGERSUPERUSER0)\"
STAGERSUPERGROUP = -DSTAGERSUPERGROUP=\"$(STAGERSUPERGROUP0)\"

MANPAGES = FileName($(MANDIR),jobManager.$(MANSUFFIX))
EXPORTMANPAGES = FileName($(EXPORTMAN),FileName(man$(MANSUFFIX),jobManager.$(MANSUFFIX)))
INCLUDES = -I FileName($(ORACLE_HOME)/rdbms,public) -I FileName(FileName(..,..),h) -I FileName(..,..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) -DORACDBC=1 $(STAGERSUPERUSER) $(STAGERSUPERGROUP)

LIBS = -lshift -ldl -lbat -llsf -llsbstream -lcastorCommonOra -lcastorCnvs -L$(ORACLE_HOME)/lib -locci

JOBMANAGER_SRCS = JobManagerDaemon.cpp ManagementThread.cpp DispatchThread.cpp SubmissionProcess.cpp JobSubmissionRequest.cpp DiskServerResource.cpp FileSystemResource.cpp ../io/StreamJobSubmissionRequestCnv.cpp ora/OraJobManagerSvc.cpp
JOBMANAGER_OBJS = $(JOBMANAGER_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(../shlib,shift) \
         DepSharedLibraryTargetName(../shlib,castorCommonOra) \
         DepSharedLibraryTargetName(../shlib,castorCnvs)

LDFLAGS += -L FileName(../..,shlib) $(MTLDFLAGS)
LD = g++

all: ProgramTargetName(jobManager)

NormalProgramTarget(jobManager,$(JOBMANAGER_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(../shlib,shift)
MakeDepSharedLibrary(../shlib,castorCommonOra)
MakeDepSharedLibrary(../shlib,castorCnvs)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(JOBMANAGER_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),jobManager)

InstallProgram(jobManager,$(BIN),root,bin,755)

install.man: $(MANDIR) $(MANPAGES)
MakeDir($(MANDIR),root,bin,0755)
IMANPAGE(jobManager,$(MANDIR),$(MANSUFFIX))
EMANPAGE(jobManager,$(EXPORTMAN)/man1,$(MANSUFFIX))

exportman: $(EXPORTMANPAGES)

clean:
	-@RemoveFiles(FilesToClean $(JOBMANAGER_OBJS))

clobber: clean
	-@RemoveFiles(ProgramTargetName(jobManager))

FORCE:

