#if !defined(_WIN32)
STGLIB_SRCSNW32 =  server/BaseDaemon.cpp  server/BaseServer.cpp
#endif

#if BuildSecurity
STGLIB_SRCS1 = io/AuthServerSocket.cpp io/AuthClientSocket.cpp server/AuthListenerThreadPool.cpp
#endif

#if BuildDlfLibrary
STGLIB_SRCS2 = DlfMsgSvc.cpp \
               dlfbuf.cpp
#endif

STGLIB_SRCS = $(STGLIB_SRCS0) $(STGLIB_SRCSNW32) $(STGLIB_SRCS1) $(STGLIB_SRCS2)

STGLIB_OBJS = $(STGLIB_SRCS:.cpp=.Osuf)


#if BuildCastorClientCPPLibrary
COMMONLIB = SharedLibraryTargetName(castorClient)
#endif

GLOBLIB = DepSharedLibraryTargetName(shlib,shift)

ifeq ($(MAJOR_CASTOR_VERSION)x,x)
  MAJOR_CASTOR_VERSION=__MAJOR_CASTOR_VERSION__
endif
ifeq ($(MINOR_CASTOR_VERSION)x,x)
  MINOR_CASTOR_VERSION=__MINOR_CASTOR_VERSION__
endif

LDFLAGS += $(DEBUG) $(MTLDFLAGS) -Wl,-soname,libcastorClient.so.$(MAJOR_CASTOR_VERSION)
LD = g++

all: $(COMMONLIB)

MakeDepSharedLibrary(shlib,shift)
SharedLibraryTarget(castorClient,$(STGLIB_OBJS),,)

MakeSubdirs(all,$(SUBDIRS))
MakeSubdirs(install,$(SUBDIRS))
MakeSubdirs(install.man,$(SUBDIRS))
MakeSubdirs(exportman,$(SUBDIRS))
MakeCondSubdirs(clean,$(SUBDIRS),clean0)
MakeCondSubdirs(clobber,$(SUBDIRS),clobber0)

#if _WIN32
Makefiles:
	-@for %i in ( $(SUBDIRS) ) \
	do @(echo %i - & cd %i & \
		..\..\imake\imake -I..\..\config & \
		$(MAKE) $(MFLAGS) $@ & cd .. )

depend:
	@echo Not supported on this platform
#else
Makefiles:
	@. ../setosflags ;\
	for i in $(SUBDIRS) ;\
	do (if [ -d $$i ] ;\
	    then \
	      (echo " $$i:" ; cd $$i ;\
	      ../../imake/imake -I../../config -DOSMajorVersion="$$OSMAJNO" -DOSMinorVersion="$$OSMINNO" ;\
	      $(MAKE) $(MFLAGS) $@) ;\
	    else \
	      (echo "ERROR : No directory $$i" ;\
	      exit 1) ;\
	    fi )\
	done ;

depend:
	makedepend -- $(INCLUDES) -- $(STGLIB_SRCS) 2> /dev/null; \
	for i in $(DEPENDDIRS) ;\
	do (if [ -d $$i ] ;\
	    then \
	      (echo " $$i:" ; cd $$i ;\
	      $(MAKE) $(MFLAGS) $@) ;\
	    else \
	      (echo "ERROR : No directory $$i" ;\
	      exit 1) ;\
	    fi )\
	done ;

#endif

#if _WIN32
COMM
COMM Because of cmd length limit in shell expansion
COMM
STGLIB_OBJS_WIN32=*.obj dlf\*.obj io\*.obj rh\*.obj stager\*.obj vdqm\*.obj exception\*.obj vdqm\handler\*.obj client\*.obj replier\*.obj server\*.obj
clean0:
        @echo cleaning in CurDir
        -@RemoveFiles($(STGLIB_OBJS_WIN32))
#else
clean0:
	@echo cleaning in CurDir
	-@RemoveFiles($(STGLIB_OBJS))
#endif

clobber0:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(COMMONLIB))

FORCE:

