#endif


#if BuildDlfClient
STGLIB_SRCS += DlfMsgSvc.cpp \
               dlfbuf.cpp
#endif

STGLIB_OBJS = $(STGLIB_SRCS:.cpp=.Osuf)

COMMONLIB = LibraryTargetName(castorClient)
GLOBLIB = DepSharedLibraryTargetName(shlib,shift)
LDFLAGS = $(DEBUG) $(MTLDFLAGS)
LD = g++

all: $(COMMONLIB)

MakeDepSharedLibrary(shlib,shift)
NormalLibraryTarget(castorClient,$(STGLIB_OBJS))

MakeSubdirs(all,$(SUBDIRS))
MakeCondSubdirs(clean,$(SUBDIRS),)
MakeCondSubdirs(clobber,$(SUBDIRS),)

#if defined(_WIN32)
Makefiles:
	@for %i in ( $(SUBDIRS) ) \
	do @(echo %i - & cd %i & \
		..\..\imake\imake -I..\..\config & \
		$(MAKE) $(MFLAGS) $@ & cd .. )

depend:
	@echo Not supported on this platform
#else
Makefiles:
	@. ../setosflags ;\
	for i in $(SUBDIRS) ;\
	do (if [ -d $$i ] ;\
	    then \
	      (echo " $$i:" ; cd $$i ;\
	      ../../imake/imake -I../../config -DOSMajorVersion="$$OSMAJNO" -DOSMinorVersion="$$OSMINNO" ;\
	      $(MAKE) $(MFLAGS) $@) ;\
	    else \
	      (echo "ERROR : No directory $$i" ;\
	      exit 1) ;\
	    fi )\
	done ;

depend:
	makedepend $(INCLUDES) $(STGLIB_SRCS) 2> /dev/null
	for i in $(DEPENDDIRS) ;\
	do (if [ -d $$i ] ;\
	    then \
	      (echo " $$i:" ; cd $$i ;\
	      $(MAKE) $(MFLAGS) $@) ;\
	    else \
	      (echo "ERROR : No directory $$i" ;\
	      exit 1) ;\
	    fi )\
	done ;

install:
	for i in $(SUBDIRS) ;\
	do (if [ -d $$i ] ;\
	    then \
	      (echo " $$i:" ; cd $$i ;\
	      $(MAKE) $(MFLAGS) $@) ;\
	    else \
	      (echo "ERROR : No directory $$i" ;\
	      exit 1) ;\
	    fi )\
	done ;
#endif

exportman:

clean::
	@echo cleaning in CurDir
	-@RemoveFiles($(STGLIB_OBJS))

clobber::	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(COMMONLIB))

FORCE:

