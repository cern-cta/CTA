#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(FileName(..,..),h) -I FileName(..,..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

LIBS = -lshift -Wl,-rpath-link,../../shlib

RHBIN_SRCS = Server.cpp RHThread.cpp

RHBIN_OBJS = $(RHBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(FileName(..,shlib),shift)

LDFLAGS += -L FileName(..,FileName(..,shlib)) $(MTLDFLAGS)
LD = g++

MANPAGES_RH = FileName($(MANDIR),rhserver.$(MANSUFFIX))
EMANPAGES_RH = FileName($(EXPORTMAN),FileName(man$(MANSUFFIX),rhserver.$(MANSUFFIX)))

all: ProgramTargetName(rhserver)

NormalProgramTarget(rhserver,$(RHBIN_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(FileName(..,shlib),shift)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(RHBIN_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),rhserver)

InstallProgram(rhserver,$(BIN),root,bin,750)

install.man: $(MANDIR) $(MANPAGES_RH)

IMANPAGE(rhserver,$(MANDIR),$(MANSUFFIX))

exportman: $(EMANPAGES_RH)

EMANPAGE(rhserver,FileName($(EXPORTMAN),man$(MANSUFFIX)),$(MANSUFFIX))

MakeDir($(MANDIR),root,bin,0755)

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(rhserver))

FORCE:

