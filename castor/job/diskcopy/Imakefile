# Makefile for the CASTOR2 DiskCopy mover
#
# @author Castor Dev team, castor-dev@cern.ch

CPPFLAGS += $(STAGERSUPERUSER) $(STAGERSUPERGROUP)
CXXFLASG += `curl-config --cflags`
LDFLAGS += -ldl -lbat -llsf -llsbstream -lnsl `curl-config --libs`

DependsOnLibrary(common,castorcommon)
DependsOnLibrary(dlf,castordlf)
DependsOnLibrary(castor,castorclient)
DependsOnLibrary(rfio,castorrfio)

JOB_SRCS = DiskCopyTransfer.cpp MainThread.cpp ../SharedResourceHelper.cpp BaseMover.cpp RfioMover.cpp
JOB_OBJS = $(JOB_SRCS:.cpp=.o)
NormalProgramTarget(d2dtransfer,$(JOB_OBJS),,,755)
MakeDir(/var/log/castor,0755)
