# Makefile for the CASTOR2 stagerjob
#
# @author Castor Dev team, castor-dev@cern.ch

CPPFLAGS = -g -O0 -I ../../../h -I ../../.. $(MTCCFLAGS) -DSTAGERSUPERUSER=stage -DSTAGERSUPERGROUP=st `curl-config --cflags`
LIBS = -ldl -lbat -llsf -llsbstream -lnsl `curl-config --libs`
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(..,castorclient)
DependsOnLibrary(../../rfio,castorrfio)

JOB_SRCS = StagerJob.cpp \
           InputArguments.cpp \
           BasePlugin.cpp \
           RawMoverPlugin.cpp \
           InstrumentedMoverPlugin.cpp \
           RfioPlugin.cpp \
           RootPlugin.cpp \
           XRootPlugin.cpp \
           GridFTPPlugin.cpp \
           ../SharedResourceHelper.cpp
JOBS_OBJS = $(JOB_SRCS:.cpp=.Osuf)
NormalProgramTarget(stagerjob,$(JOBS_OBJS),$(DEPLIB),$(LIBS),6755)
MakeDir(/var/log/castor,0755)
LOGROTATE(castor-job,../../..,install)
