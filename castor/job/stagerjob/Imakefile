# Makefile for the CASTOR2 stagerjob
#
# @author castor dev team

#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

#ifdef StagerSuperUser
STAGERSUPERUSER0 = StagerSuperUser
#else
STAGERSUPERUSER0 = stage
#endif
#ifdef StagerSuperGroup
STAGERSUPERGROUP0 = StagerSuperGroup
#else
STAGERSUPERGROUP0 = st
#endif
STAGERSUPERUSER  = -DSTAGERSUPERUSER=\"$(STAGERSUPERUSER0)\"
STAGERSUPERGROUP = -DSTAGERSUPERGROUP=\"$(STAGERSUPERGROUP0)\"

INCLUDES = -I FileName(FileName(../..,..),h) -I FileName(../..,..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) $(STAGERSUPERUSER) $(STAGERSUPERGROUP) `curl-config --cflags`

LIBS = -lshift `curl-config --libs` -Wl,-rpath-link,../../../shlib

JOB_SRCS = StagerJob.cpp \
           BasePlugin.cpp \
           RawMoverPlugin.cpp \
           InstrumentedMoverPlugin.cpp \
           RfioPlugin.cpp \
           RootPlugin.cpp \
           XRootPlugin.cpp \
           GridFTPPlugin.cpp \
           ../SharedResourceHelper.cpp

JOB_OBJS = $(JOB_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(../../shlib,shift)

LDFLAGS += -L FileName(../../..,shlib) $(MTLDFLAGS)
LD = g++

all: ProgramTargetName(stagerJob)

NormalProgramTarget(stagerJob,$(JOB_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(../../shlib,shift)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(JOB_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),diskCopyTransfer)

InstallProgram(stagerJob,$(BIN),root,bin,755)

install.man: $(MANDIR)
MakeDir($(MANDIR),root,bin,0755)

exportman:

clean:
	-@RemoveFiles(FilesToClean $(JOB_OBJS))

clobber: clean
	-@RemoveFiles(ProgramTargetName(stagerJob))

FORCE:
