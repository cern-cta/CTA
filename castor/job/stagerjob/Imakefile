COMM Makefile for the CASTOR2 stagerjob
COMM
COMM @author Castor Dev team, castor-dev@cern.ch

AddLdFlags(-lstdc++)

DependsOnLibrary(common,castorcommon)
DependsOnLibrary(dlf,castordlf)
DependsOnLibrary(castor,castorclient)
DependsOnLibrary(rfio,castorrfio)

JOB_SRCS = StagerJob.cpp \
           InputArguments.cpp \
           BasePlugin.cpp \
           RawMoverPlugin.cpp \
           InstrumentedMoverPlugin.cpp \
           RfioPlugin.cpp \
           RootPlugin.cpp \
           XRootPlugin.cpp \
           GridFTPPlugin.cpp
JOBS_OBJS = $(JOB_SRCS:.cpp=.o)
NormalProgramTarget(stagerjob,$(JOBS_OBJS),,,6755)
MakeDir($(LOGPATH),0755)
LOGROTATE(castor-job,install)
