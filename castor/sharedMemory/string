#ifndef SHAREDMEMORY_STRING_HPP 
#define SHAREDMEMORY_STRING_HPP 1

#include <string>
#include "castor/sharedMemory/Allocator.hpp"

namespace castor {

  namespace sharedMemory {

    typedef std::basic_string
    <char,
     std::char_traits<char>,
     castor::sharedMemory::Allocator<char> > string;

  } // end sharedMemory

} // end castor

#endif // SHAREDMEMORY_STRING_HPP
