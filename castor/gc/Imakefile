CPPFLAGS = -g -O0 -I ../../h -I ../.. $(MTCCFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../common,castorcommon)
DependsOnLibrary(../dlf,castordlf)
DependsOnLibrary(../ns,castorns)
DependsOnLibrary(,castorclient)

GCBIN_SRCS = GcDaemon.cpp DeletionThread.cpp SynchronizationThread.cpp
GCBIN_OBJS = $(GCBIN_SRCS:.cpp=.Osuf)
NormalProgramTarget(gcd,$(GCBIN_OBJS),$(DEPLIB),$(LIBS),0755)
MakeDir(/var/log/castor,0755)
MakeDirWithOwnership(/var/spool/castor,stage,st,0755)
ADMMANPAGE(gcd)
LOGROTATE(castor-gc-server,../..,install)
SYSCONFIG(gcd,install)
INITSCRIPT(gcd,install)
