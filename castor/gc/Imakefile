#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(FileName(..,..),h) -I FileName(..,..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

LIBS = -lshift

RHBIN_SRCS = GcDaemon.cpp

RHBIN_OBJS = $(RHBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(FileName(..,shlib),shift)

LDFLAGS = -L FileName(..,FileName(..,shlib)) $(MTLDFLAGS)
LD = g++

#if BuildSecurity 
SECURITYFLAG=-DCSEC
LIBS+= -ldl
#endif 

all: ProgramTargetName(gcDaemon)

NormalProgramTarget(gcDaemon,$(RHBIN_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(FileName(..,shlib),shift)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(RHBIN_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),rhserver)

InstallProgram(gcDaemon,$(BIN),root,bin,755)

exportman:

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(gcDaemon))

FORCE:

