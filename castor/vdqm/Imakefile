#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(FileName(..,..),h) -I FileName(..,..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

LIBS = -lshift -lcastorCommonOra

VDQMBIN_SRCS =AbstractRequestHandler.cpp \
							ExtendedDeviceGroup.cpp \
              ExtendedDeviceGroupCInt.cpp \
							OldVdqmProtocol.cpp \
              TapeDrive.cpp \
              TapeDriveCInt.cpp \
              TapeDriveStatusCodes.cpp \
              TapeRequest.cpp \
              TapeRequestCInt.cpp \
              TapeRequestHandler.cpp \
              TapeRequestStatusCode.cpp \
              TapeServer.cpp \
              TapeServerCInt.cpp \
              VdqmServer.cpp \
              VdqmServerSocket.cpp


VDQMBIN_OBJS = $(VDQMBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(FileName(..,shlib),shift) \
         DepSharedLibraryTargetName(FileName(..,shlib),castorCommonOra)

LDFLAGS = -L FileName(..,FileName(..,shlib)) $(MTLDFLAGS)
LD = g++

all: ProgramTargetName(vdqmserver)

NormalProgramTarget(vdqmserver,$(VDQMBIN_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(FileName(..,shlib),shift)
MakeDepSharedLibrary(FileName(..,shlib),castorCommonOra)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(VDQMBIN_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),vdqmserver)

InstallProgram(vdqmserver,$(BIN),root,bin,755)

exportman:

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(vdqmserver))

FORCE:

