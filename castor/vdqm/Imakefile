#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(FileName(..,..),h) -I FileName(..,..)
#CPPFLAGS = -DPRINT_NETWORK_MESSAGES -DORAVDQMCONFIGFILE=\"/etc/castor/ORAVDQMCONFIG\" $(DEBUG) $(INCLUDES) $(MTCCFLAGS)
CPPFLAGS = -DORAVDQMCONFIGFILE=\"/etc/castor/ORAVDQMCONFIG\" $(DEBUG) $(INCLUDES) $(MTCCFLAGS)
CFLAGS = -O -I$(INCLUDES) $(THREADFLAGS)

LIBS = -lshift -lcastorCnvs -Wl,-rpath-link,../../shlib

VDQMBIN_SRCS = CDevTools.cpp \
               DatabaseHelper.cpp \
               DevTools.cpp \
               DriveSchedulerThread.cpp \
               NewProtocolInterpreter.cpp \
               OldProtocolInterpreter.cpp \
               OldRequestFacade.cpp \
               ProtocolFacade.cpp \
               RequestHandlerThread.cpp \
               RTCopyDConnection.cpp \
               RTCPJobSubmitterThread.cpp \
               VdqmMagic2ProtocolInterpreter.cpp \
               VdqmServer.cpp \
               VdqmSocketHelper.cpp \
               handler/BaseRequestHandler.cpp \
               handler/TapeDriveConsistencyChecker.cpp \
               handler/TapeDriveHandler.cpp \
               handler/TapeDriveStatusHandler.cpp \
               handler/TapeRequestHandler.cpp \
               handler/VdqmMagic2RequestHandler.cpp

MANPAGES_VDQM = FileName($(MANDIR),vdqmserver.$(MANSUFFIX))
EMANPAGES_VDQM = FileName($(EXPORTMAN),FileName(man$(MANSUFFIX),vdqmserver.$(MANSUFFIX)))

VDQMBIN_OBJS = $(VDQMBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(FileName(..,shlib),shift)

LDFLAGS += -L FileName(..,FileName(..,shlib)) $(MTLDFLAGS)
LD = g++

all: ProgramTargetName(vdqmserver)

NormalProgramTarget(vdqmserver,$(VDQMBIN_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(FileName(..,shlib),shift)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(VDQMBIN_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),vdqmserver)

InstallProgram(vdqmserver,$(BIN),root,bin,755)

install.man: $(MANDIR) $(MANPAGES_RH)

IMANPAGE(vdqmserver,$(MANDIR),$(MANSUFFIX))

exportman:

EMANPAGE(vdqmserver,FileName($(EXPORTMAN),man$(MANSUFFIX)),$(MANSUFFIX))

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean $(VDQMBIN_OBJS))

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(vdqmserver))

FORCE:

