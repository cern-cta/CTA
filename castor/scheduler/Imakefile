# Makefile for the CASTOR2 LSF External Plugin
#
# @author Castor Dev team, castor-dev@cern.ch

CPPFLAGS = -g -O0 -I ../../h -I ../.. $(PYTHONINC) $(MTCCFLAGS)
LIBS = -lbat -llsf -llsbstream -lm

DependsOnLibrary(../common,castorcommon)
DependsOnLibrary(../dlf,castordlf)
DependsOnLibrary(monitoring,castormonitor)

SCHMOD_SHMEM_SRCS = schmod_shmem.cpp HandlerData.cpp
SchModTarget(schmod_shmem,$(SCHMOD_SHMEM_SRCS),$(DEPLIB),$(LIBS),$(LIBDIR))

SCHMOD_PYTHON_SRCS = schmod_python.cpp HandlerData.cpp Python.cpp
SchModTarget(schmod_python,$(SCHMOD_PYTHON_SRCS),$(DEPLIB),$(LIBS) $(PYTHONLIBS),$(LIBDIR))

MakeDir(/var/log/castor,0755)
EXEMANPAGE(schmod_castor)
LOGROTATE(castor-lsf-plugin,../..,install)
EXAMPLEFILE(scheduler.py,../../debian,/etc/castor/policies,install)
