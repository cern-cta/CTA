CPPFLAGS = -g -O0 -I $(ORACLE_HOME)/rdbms/public -I ../../../h -I ../../.. $(PYTHONINC) $(MTCCFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++
LIBS = -L$(ORACLE_HOME)/lib -locci -lclntsh $(PYTHONLIBS)

DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(../../vdqm,castorvdqm)
DependsOnLibrary(../../vmgr,castorvmgr)
DependsOnLibrary(..,castorclient)
DependsOnLibrary(../db/newora,castorcommonora)
DependsOnLibrary(../db/cnv,castorcnvs)
DependsOnLibrary(../infoPolicy,castorinfopolicy)
DependsOnLibrary(../../rfio,castorrfio)

TAPEGATEWAYDBIN_SRCS = daemon/TapeGatewayDaemon.cpp daemon/WorkerThread.cpp \
	daemon/MigratorErrorHandlerThread.cpp  daemon/RecallerErrorHandlerThread.cpp \
	daemon/TapeStreamLinkerThread.cpp  daemon/VdqmRequestsCheckerThread.cpp  daemon/VdqmRequestsProducerThread.cpp \
	daemon/VmgrTapeGatewayHelper.cpp  daemon/VdqmTapeGatewayHelper.cpp  daemon/NsTapeGatewayHelper.cpp \
	 daemon/RmMasterTapeGatewayHelper.cpp ../utils/utils.cpp ../net/net.cpp  

TAPEGATEWAY_MESSAGES_SRCS = \
	VolumeRequest.cpp Volume.cpp VdqmTapeGatewayRequest.cpp \
	FileToMigrateRequest.cpp FileToMigrate.cpp \
	FileToRecallRequest.cpp FileToRecall.cpp \
	FileMigratedNotification.cpp FileRecalledNotification.cpp \
	EndNotification.cpp NotificationAcknowledge.cpp EndNotificationErrorReport.cpp\
	NoMoreFiles.cpp  GatewayMessage.cpp \
	BaseFileInfo.cpp PositionCommandCode.cpp FileErrorReport.cpp ClientType.cpp \
	TapeGatewayRequest.cpp TapeRequestStateCode.cpp TapeGatewaySubRequest.cpp VolumeMode.cpp

TAPEGATEWAY_IO_SRCS = \
	../../io/StreamVolumeRequestCnv.cpp ../../io/StreamVolumeCnv.cpp \
	../../io/StreamFileToMigrateRequestCnv.cpp ../../io/StreamFileToMigrateCnv.cpp \
	../../io/StreamFileToRecallRequestCnv.cpp ../../io/StreamFileToRecallCnv.cpp \
	../../io/StreamFileMigratedNotificationCnv.cpp ../../io/StreamFileRecalledNotificationCnv.cpp \
	../../io/StreamEndNotificationCnv.cpp ../../io/StreamNotificationAcknowledgeCnv.cpp \
	../../io/StreamEndNotificationErrorReportCnv.cpp ../../io/StreamNoMoreFilesCnv.cpp  \
	../../io/StreamFileErrorReportCnv.cpp

TAPEGATEWAY_DB_SRCS = ../../db/cnv/DbTapeGatewayRequestCnv.cpp  daemon/ora/OraTapeGatewaySvc.cpp \
	../../db/cnv/DbTapeGatewaySubRequestCnv.cpp

TAPEGATEWAYBIN_SRCS = $(TAPEGATEWAYDBIN_SRCS) $(TAPEGATEWAY_MESSAGES_SRCS) $(TAPEGATEWAY_IO_SRCS) $(TAPEGATEWAY_DB_SRCS)

TAPEGATEWAYBIN_OBJS = $(TAPEGATEWAYBIN_SRCS:.cpp=.Osuf)
NormalProgramTarget(tapegatewayd,$(TAPEGATEWAYBIN_OBJS),$(DEPLIB),$(LIBS),750)
ADMMANPAGE(tapegatewayd)
SYSCONFIG(tapegatewayd,install)
INITSCRIPT(tapegatewayd,install)
LOGROTATE(castor-tapegateway-server,../../..,install)
