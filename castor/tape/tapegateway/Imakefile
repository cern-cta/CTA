CPPFLAGS += $(ORACLE_CPPFLAGS) $(PYTHON_INC)
AddLdFlags($(PYTHON_LIBS) -L$(ORACLE_LIBDIR) -locci -lclntsh -lstdc++)

DependsOnLibrary(castor,castorclient)
DependsOnLibrary(castor/db/cnv,castorcnvs)
DependsOnLibrary(common,castorcommon)
DependsOnLibrary(castor/db/newora,castorcommonora)
DependsOnLibrary(dlf,castordlf)
DependsOnLibrary(ns,castorns)
DependsOnLibrary(rfio,castorrfio)
DependsOnLibrary(castor/tape/gatewayprotocol,castortapegatewayprotocol)
DependsOnLibrary(castor/tape/net,castortapenet)
DependsOnLibrary(castor/tape/python,castortapepython)
DependsOnLibrary(castor/tape/utils,castortapeutils)
DependsOnLibrary(vdqm,castorvdqm)
DependsOnLibrary(vmgr,castorvmgr)

TAPEGATEWAYDBIN_SRCS = \
        ScopedTransaction.cpp \
  	TapeGatewayDlfMessageStrings.cpp \
	TapeGatewaySubRequest.cpp \
	TapeRequestStateCode.cpp \
	TapeGatewayRequest.cpp \
	VdqmTapeGatewayRequest.cpp \
	daemon/MigratorErrorHandlerThread.cpp \
	daemon/MountIdToFseqMap.cpp \
	daemon/NsTapeGatewayHelper.cpp \
	daemon/RecallerErrorHandlerThread.cpp \
	daemon/TapeGatewayDaemon.cpp \
	daemon/TapeGatewayMain.cpp \
	daemon/TapeStreamLinkerThread.cpp  \
	daemon/VdqmRequestsCheckerThread.cpp  \
	daemon/VdqmRequestsProducerThread.cpp \
	daemon/VdqmTapeGatewayHelper.cpp  \
	daemon/VmgrTapeGatewayHelper.cpp  \
	daemon/WorkerThread.cpp \
	daemon/ora/OraTapeGatewaySvc.cpp

TAPEGATEWAYBIN_SRCS = $(TAPEGATEWAYDBIN_SRCS)

TAPEGATEWAYBIN_OBJS = $(TAPEGATEWAYBIN_SRCS:.cpp=.o)
NormalProgramTarget(tapegatewayd,$(TAPEGATEWAYBIN_OBJS),,,755)
ADMMANPAGE(tapegatewayd)
SYSCONFIG(tapegatewayd,install)
INITSCRIPT(tapegatewayd,install)
LOGROTATE(castor-tapegateway-server,install)
EXAMPLEFILE(migrationRetry.py,/etc/castor/policies,install)
EXAMPLEFILE(recallRetry.py,/etc/castor/policies,install)

