CPPFLAGS = -g -O0 -I $(ORACLE_HOME)/rdbms/public -I ../../../h -I ../../.. $(PYTHONINC) $(MTCCFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++
LIBS = -L$(ORACLE_HOME)/lib -locci -lclntsh 

DependsOnLibrary(..,castorclient)
DependsOnLibrary(../db/cnv,castorcnvs)
DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../db/newora,castorcommonora)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(../../rfio,castorrfio)
DependsOnLibrary(../tape/python,castortapepython)
DependsOnLibrary(../tape/utils,castortapeutils)
DependsOnLibrary(../../vdqm,castorvdqm)
DependsOnLibrary(../../vmgr,castorvmgr)

TAPEGATEWAYDBIN_SRCS = \
  	TapeGatewayDlfMessageStrings.cpp \
  	daemon/MigratorErrorHandlerThread.cpp \
	daemon/NsTapeGatewayHelper.cpp \
	daemon/RecallerErrorHandlerThread.cpp \
	daemon/RmMasterTapeGatewayHelper.cpp \
	daemon/TapeGatewayDaemon.cpp \
	daemon/TapeGatewayMain.cpp \
	daemon/TapeStreamLinkerThread.cpp  \
	daemon/VdqmRequestsCheckerThread.cpp  \
	daemon/VdqmRequestsProducerThread.cpp \
	daemon/VdqmTapeGatewayHelper.cpp  \
	daemon/VmgrTapeGatewayHelper.cpp  \
	daemon/WorkerThread.cpp \
	daemon/ora/OraTapeGatewaySvc.cpp \
	../net/net.cpp  

TAPEGATEWAY_MESSAGES_SRCS = \
	BaseFileInfo.cpp \
	ClientType.cpp \
	EndNotification.cpp \
	EndNotificationErrorReport.cpp\
	FileErrorReport.cpp \
	FileMigratedNotification.cpp \
	FileRecalledNotification.cpp \
	FileToMigrate.cpp \
	FileToMigrateRequest.cpp \
	FileToRecall.cpp \
	FileToRecallRequest.cpp \
	GatewayMessage.cpp \
	NoMoreFiles.cpp  \
	NotificationAcknowledge.cpp \
	PositionCommandCode.cpp \
	TapeGatewayRequest.cpp \
	TapeGatewaySubRequest.cpp \
	TapeRequestStateCode.cpp \
	VolumeRequest.cpp \
	Volume.cpp \
	VolumeMode.cpp \
	VdqmTapeGatewayRequest.cpp 

TAPEGATEWAY_IO_SRCS = \
	../../io/StreamEndNotificationCnv.cpp \
	../../io/StreamFileErrorReportCnv.cpp \
	../../io/StreamFileMigratedNotificationCnv.cpp \
	../../io/StreamFileRecalledNotificationCnv.cpp \
	../../io/StreamFileToMigrateCnv.cpp \
	../../io/StreamFileToMigrateRequestCnv.cpp \
	../../io/StreamFileToRecallCnv.cpp \
	../../io/StreamFileToRecallRequestCnv.cpp \
	../../io/StreamNoMoreFilesCnv.cpp  \
	../../io/StreamNotificationAcknowledgeCnv.cpp \
	../../io/StreamVolumeCnv.cpp \
	../../io/StreamVolumeRequestCnv.cpp 


TAPEGATEWAY_DB_SRCS = \
	../../db/cnv/DbTapeGatewaySubRequestCnv.cpp \
	../../db/cnv/DbTapeGatewayRequestCnv.cpp  

TAPEGATEWAYBIN_SRCS = $(TAPEGATEWAYDBIN_SRCS) $(TAPEGATEWAY_MESSAGES_SRCS) $(TAPEGATEWAY_IO_SRCS) $(TAPEGATEWAY_DB_SRCS)

TAPEGATEWAYBIN_OBJS = $(TAPEGATEWAYBIN_SRCS:.cpp=.Osuf)
NormalProgramTarget(tapegatewayd,$(TAPEGATEWAYBIN_OBJS),$(DEPLIB),$(LIBS),750)
ADMMANPAGE(tapegatewayd)
SYSCONFIG(tapegatewayd,install)
INITSCRIPT(tapegatewayd,install)
LOGROTATE(castor-tapegateway-server,../../..,install)


