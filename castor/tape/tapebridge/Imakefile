AddLdFlags(-lstdc++)

DependsOnLibrary(castor,castorclient)
DependsOnLibrary(castor/tape/gatewayprotocol,castortapegatewayprotocol)
DependsOnLibrary(castor/tape/legacymsg,castortapelegacymsg)
DependsOnLibrary(castor/tape/net,castortapenet)
DependsOnLibrary(castor/tape/utils,castortapeutils)
DependsOnLibrary(common,castorcommon)
DependsOnLibrary(dlf,castordlf)
DependsOnLibrary(tapebridge,castortapebridge)

TAPEBRIDGEBIN_SRCS = \
  BridgeClientInfo2Sender.cpp \
  BridgeProtocolEngine.cpp \
  BridgeSocketCatalogue.cpp \
  BulkRequestConfigParams.cpp \
  ClientAddress.cpp \
  ClientAddressLocal.cpp \
  ClientAddressTcpIp.cpp \
  ClientProxy.cpp \
  ConfigParams.cpp \
  ConfigParamSource.cpp \
  FileToMigrate.cpp \
  FileToRecall.cpp \
  GetMoreWorkConnection.cpp \
  DlfMessageStrings.cpp \
  IClientProxy.cpp \
  IFileCloser.cpp \
  ILegacyTxRx.cpp \
  LegacyTxRx.cpp \
  LogHelper.cpp \
  MigrationReportConnection.cpp \
  PendingMigrationsStore.cpp \
  RtcpJobSubmitter.cpp \
  RtcpTxRx.cpp \
  SessionError.cpp \
  SessionErrorList.cpp \
  SystemFileCloser.cpp \
  TapeBridgeDaemon.cpp \
  TapeBridgeMain.cpp \
  TapeFlushConfigParams.cpp \
  VdqmRequestHandler.cpp \
  VmgrTxRx.cpp \
  $(TAPEGATEWAY_MESSAGES_SRCS) \
  $(TAPEGATEWAY_IO_SRCS)
TAPEBRIDGEBIN_OBJS = $(TAPEBRIDGEBIN_SRCS:.cpp=.o)

NormalProgramTarget(tapebridged,$(TAPEBRIDGEBIN_OBJS),,,755)
MakeDir($(LOGPATH),0755)
ADMMANPAGE(tapebridged)
LOGROTATE(castor-tapebridge-server,install)
SYSCONFIG(tapebridged,install)
INITSCRIPT(tapebridged,install)
