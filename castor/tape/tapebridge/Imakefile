CPPFLAGS = -g -O0 -I../../../h -I../../.. $(MTCCFLAGS)
CFLAGS = -O -I../../../h -I../../.. $(THREADFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(../db/cnv,castorcnvs)
DependsOnLibrary(../tape/gatewayprotocol,castortapegatewayprotocol)
DependsOnLibrary(../tape/utils,castortapeutils)

TAPEBRIDGEBIN_SRCS = \
  BridgeProtocolEngine.cpp \
  BridgeSocketCatalogue.cpp \
  BoolFunctor.cpp \
  ClientTxRx.cpp \
  DlfMessageStrings.cpp \
  DriveAllocationProtocolEngine.cpp \
  LegacyTxRx.cpp \
  LogHelper.cpp \
  Packer.cpp \
  RtcpJobSubmitter.cpp \
  RtcpTxRx.cpp \
  SynchronizedCounter.cpp \
  TapeBridgeDaemon.cpp \
  TapeBridgeMain.cpp \
  Unpacker.cpp \
  VdqmRequestHandler.cpp \
  VmgrTxRx.cpp \
  ../legacymsg/CommonMarshal.cpp \
  ../legacymsg/RtcpMarshal.cpp \
  ../legacymsg/VmgrMarshal.cpp \
  ../net/net.cpp \
  $(TAPEGATEWAY_MESSAGES_SRCS) \
  $(TAPEGATEWAY_IO_SRCS)
TAPEBRIDGEBIN_OBJS = $(TAPEBRIDGEBIN_SRCS:.cpp=.Osuf)

NormalProgramTarget(tapebridged,$(TAPEBRIDGEBIN_OBJS),$(DEPLIB),$(LIBS),750)
MakeDir(/var/log/castor,0755)
ADMMANPAGE(tapebridged)
LOGROTATE(castor-tapebridge-server,../../..,install)
SYSCONFIG(tapebridged,install)
INITSCRIPT(tapebridged,install)
