CKSUMLIB = -lz
CPPFLAGS = -pedantic -Wall -Werror -g -O0 -I../../../h -I../../..  $(MTCCFLAGS)
CFLAGS = -O -I../../../h -I../../.. $(THREADFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../../castor,castorclient)

TAPEFORMAT_SRCS = \
     ALB0100Marshaller.cpp \ 
     ALB0100Unmarshaller.cpp \ 
     Marshaller.cpp \ 
     Unmarshaller.cpp
TAPEFORMATLIB_OBJS = $(TAPEFORMAT_SRCS:.cpp=.Osuf)
SharedLibraryTarget(castortapeformat,$(TAPEFORMATLIB_OBJS),$(DEPLIB),$(LIBS) $(CKSUMLIB))

NSLIB = SharedLibraryTargetName(castortapeformat)

NEWTPWRITE_SRCS = \
     ALBWriter.cpp \
     $(TAPEFORMAT_SRCS)  
NEWTPWRITEBIN_OBJS = $(NEWTPWRITE_SRCS:.cpp=.Osuf)
NormalProgramTarget(albwriter,$(NEWTPWRITEBIN_OBJS),$(NSLIB) $(DEPLIB),$(LIBS) $(CKSUMLIB),750)
EXEMANPAGE(albwriter)

NEWTPREAD = \
     ALBReader.cpp \
     $(TAPEFORMAT_SRCS)
NEWTPREADBIN_OBJS = $(NEWTPREAD:.cpp=.Osuf)
NormalProgramTarget(albreader, $(NEWTPREADBIN_OBJS), $(NSLIB) $(DEPLIB),$(LIBS) $(CKSUMLIB),750)
EXEMANPAGE(albreader)

