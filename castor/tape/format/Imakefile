AddLdFlags(-lz)

DependsOnLibrary(castor,castorclient)

TAPEFORMAT_SRCS = \
     ALB0100Marshaller.cpp \
     ALB0100Unmarshaller.cpp \
     Marshaller.cpp \
     Unmarshaller.cpp
TAPEFORMATLIB_OBJS = $(TAPEFORMAT_SRCS:.cpp=.o)
SharedLibraryTarget(castortapeformat,$(TAPEFORMATLIB_OBJS),,)

TPFORMATLIB = DepSharedLibraryTargetName(castor/tape/format,castortapeformat)

NEWTPWRITE_SRCS = \
     ALBWriter.cpp \
     $(TAPEFORMAT_SRCS)  
NEWTPWRITEBIN_OBJS = $(NEWTPWRITE_SRCS:.cpp=.o)
NormalProgramTarget(albwriter,$(NEWTPWRITEBIN_OBJS),$(TPFORMATLIB),,755)
EXEMANPAGE(albwriter)

NEWTPREAD = \
     ALBReader.cpp \
     $(TAPEFORMAT_SRCS)
NEWTPREADBIN_OBJS = $(NEWTPREAD:.cpp=.o)
NormalProgramTarget(albreader,$(NEWTPREADBIN_OBJS),$(TPFORMATLIB),,755)
EXEMANPAGE(albreader)

