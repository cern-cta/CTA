.PS

copy "sequence.pic";

step(); # For readability

# Define the objects
object(RC,"rtcpcld");
placeholder_object(C);
object(V,"vdqm");

placeholder_object(Fake_2);
placeholder_object(Fake_3);

object(RF,"rtcpd");

step();

# Message sequences
active(RC);
message(RC,V,"connect");
active(V);
message(RC,V,"volume request");
message(V,RC,"ack");
message(V,RC,"volReqID");
message(RC,V,"ack");
message(RC,V,"disconnect");
inactive(V);

step();

active(V);
active(RF);
message(V,RF,"connect");

message(V,RF,"ClientInfo - job");
message(RF,V,"RcpJobReply");
message(RF,V,"disconnect");
inactive(V);


message(RF,RC,"connect");
message(RC,RF,"request ReqInfo");
message(RF,RC,"ack");
message(RF,RC,"ReqInfo");
message(RC,RF,"ack");

create_message(RC,C,"recaller");
active(C);
message(C,RF,"ClientInfo - new callback");
message(RF,C,"ack");
message(C,RF,"disconnect");

step();

message(RF,C,"connect");

# Start of getRequestList
message(C,RF,"volume info");
message(RF,C,"ack");

message(C,RF,"Offer_MoreWork - Joker");
message(RF,C,"ack");

message(C,RF,"NoMore_Req");
message(RF,C,"ack");
# End of getRequestList

step();
message(RF,C,"connect for tape IO");
message(RF,C,"connect for disk IO");
message(RF,C,"connect for disk IO");
message(RF,C,"connect for disk IO");
step();

message(RF,C,"Request_MoreWork (1)");
# Acknowledge comes after getRequestList()

# Start of getRequestList
message(C,RF,"file 1");
message(RF,C,"ack");

message(C,RF,"Offer_MoreWork - Joker");
message(RF,C,"ack");

message(C,RF,"NoMore_Req");
message(RF,C,"ack");
# End of getRequestList


step();

message(RF,C,"positioned for file 1 (tape req)");
message(C,RF,"ack");
message(RF,C,"positioned for file 1 (file req)");
message(C,RF,"ack");

message(RF,C,"Transfert file 1");
message(C,RF,"ack");

# Better late than never
# Acknowledge of tape IO's request for more work
message(C,RF,"ack of Request_MoreWork (1)");

step();

#---------------------------------------------
# Begin of the second file transfert messaging
message(RF,C,"Request_MoreWork (2)");
message(C,RF,"ack");


# If ther are no more file to transfer
message(C,RF,"End_of_List");
message(RF,C,"ack");
# End of EMPTY getRequestList

# Better late than never
# Acknowledge of tape IO's request for more work
message(C,RF,"ack of Request_MoreWork (2)");

step();

message(RF,C,"End_of_Req");
message(C,RF,"ack");

step(); # For readability

inactive(RF);
inactive(C);
inactive(RC);

complete(RC);
complete(C);
complete(V);
complete(RF);

.PE

