.PS

copy "sequence.pic";

# Define the objects
object(GW,"gateway");
object(AG, "aggregator");
object(V,"vdqm");
object(R,"rtcpd");
placeholder_object(RF);
placeholder_object(A);
placeholder_object(T);
placeholder_object(D1);
placeholder_object(D2);
placeholder_object(D3);

step();

# Message sequences
active(GW);
message(GW,V,"connect");
active(V);
message(GW,V,"volume request");
message(V,GW,"ack");
message(V,GW,"volReqID");
message(GW,V,"ack");
message(GW,V,"disconnect");
inactive(V);

step();

active(V);
message(V,R,"connect");
active(R);
create_message(R,RF,"main cntl");
active(RF);
inactive(R);

message(V,RF,"ClientInfo - job");
message(RF,V,"RcpJobReply");
message(RF,V,"disconnect");
inactive(V);

step();

active(AG);
message(RF,AG,"connect");
message(AG,RF,"request ReqInfo");
message(RF,AG,"ack");
message(RF,AG,"ReqInfo");
message(AG,RF,"ack");

# -----------------------------------------------
message(AG,GW, "connect");
message(AG,GW,"volumeRequest"); 
message(GW,AG,"volume");

# Start of getRequestList
message(AG,RF,"volume info");
message(RF,AG,"ack");

step();

message(AG,RF,"Offer_MoreWork - Joker");
message(RF,AG,"ack");

message(AG,RF,"NoMore_Req");
message(RF,AG,"ack");
# End of getRequestList

create_message(RF,A,"abort");
active(A);

message(RF,AG,"connect for tape IO");

create_message(RF,T,"tape IO");
active(T);

message(RF,AG,"connect for disk IO");
message(RF,AG,"connect for disk IO");
message(RF,AG,"connect for disk IO");

create_message(RF,D1,"disk IO");
active(D1);
create_message(RF,D2,"disk IO");
active(D2);
create_message(RF,D3,"disk IO");
active(D3);

message(T,AG,"Request_MoreWork - Joker");
# Acknowledge comes after getRequestList()

# Start of getRequestList
message(AG,T,"file 1");
message(T,AG,"ack");

message(AG,T,"Offer_MoreWork - Joker");
message(T,AG,"ack");

message(AG,T,"NoMore_Req");
message(T,AG,"ack");
# End of getRequestList

# Better late than never
# Acknowledge of tape IO's request for more work
message(AG,T,"ack of Request_MoreWork");

step();

message(T,AG,"positioned for file 1 (tape req)");
message(AG,T,"ack");
message(T,AG,"positioned for file 1 (file req)");
message(AG,T,"ack");

message(T,AG,"Request_MoreWork - Joker");
message(AG,T,"ack");

message(D1,AG,"Finished file 1");
message(AG,D1,"ack");

step();

message(T,AG,"Request_MoreWork - Joker");
# Acknowledge comes after getRequestList()

message(AG,T,"file 2");
message(T,AG,"ack");

message(AG,T,"Offer_MoreWork - Joker");
message(T,AG,"ack");

message(AG,T,"NoMore_Req");
message(T,AG,"ack");
# End of getRequestList

# Better late than never
# Acknowledge of tape IO's request for more work
message(AG,T,"ack of Request_MoreWork");

step();

message(T,AG,"positioned for file 2 (tape req)");
message(AG,T,"ack");
message(T,AG,"positioned for file 2 (file req)");
message(AG,T,"ack");

message(T,AG,"Request_MoreWork - Joker");
message(AG,T,"ack");

message(D1,AG,"Finished file 2");
message(AG,D1,"ack");

step();


message(AG,T,"NoMore_Req");
message(T,AG,"ack");
# End of EMPTY getRequestList

message(T,AG,"EndOf_Req");
message(AG,T,"ack");
inactive(T);

inactive(A);
inactive(RF);
inactive(AG);
inactive(GW);

complete(GW);
complete(AG);
complete(V);
complete(R);
complete(RF);
complete(T);
complete(A);
complete(D1);
complete(D2);
complete(D3);

.PE

