.PS

copy "sequence.pic";

step(); # For readability

# Define the objects
object(C,"tpread");
object(M,"vmgr");
object(V,"vdqm");
object(R,"rtcpd");

step();

# Message sequences

# TPREAD <--> VMGR
active(C);
message(C,M,"connect");
active(M);
message(C,M,"VMGR_QRYTAPE");      # 0x0004
message(M,C,"MSG_DATA");          # 0x0002
message(M,C,"VMGR_RC");           # 0x0002
message(M,C,"disconnect");
inactive(M);

step();

# TPREAD <--> VDQM
message(C,V,"connect");
active(V);
message(C,V,"VDQM_VOL_REQ");      # 0x3101
message(V,C,"VDQM_COMMIT");       # 0x310b
message(C,V,"VDQM_VOL_REQ");      # 0x3101
message(V,C,"VDQM_COMMIT");       # 0x310b
message(C,V,"disconnect");
inactive(V);

step();

# VDQM <--> RTCPD
active(V);
message(V,R,"connect");
active(R);
message(V,R,"VDQM_CLIENTINFO");         # 0x3104
message(R,V,"VDQM_CLIENTINFO (ack)");   # 0x3104
message(R,V,"disconnect");
inactive(V);

step();

# RTCPD <--> TPREAD

message(R,C,"connect");
message(C,R,"volume");
message(R,C,"acknowledge");

message(C,R,"file1");
message(R,C,"acknowledge");

message(C,R,"file2");
message(R,C,"acknowledge");

message(C,R,"RTCP_NOMORE_REQ");
message(R,C,"acknowledge");

message(R,C,"connect for tape IO");

message(R,C,"connect for disk IO");
message(R,C,"connect for disk IO");
message(R,C,"connect for disk IO");

message(R,C,"positioned for file1 (tape req)");
message(C,R,"acknowledge");
message(R,C,"positioned for file1 (file req)");
message(C,R,"acknowledge");

message(R,C,"positioned for file2 (tape req)");
message(C,R,"acknowledge");
message(R,C,"positioned for file2 (file req)");
message(C,R,"acknowledge");

message(R,C,"RTCP_FINISHED file2");
message(C,R,"acknowledge");

message(R,C,"RTCP_FINISHED file1");
message(C,R,"acknowledge");

message(R,C,"RTCP_ENDOF_REQ");
message(C,R,"acknowledge");

inactive(R);
inactive(C);

complete(C);
complete(M);
complete(V);
complete(R);

step(); # For readability

.PE

