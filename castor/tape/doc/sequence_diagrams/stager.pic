###############################################################################
# This diagram shows the sequence of messages sent between rtcpcld, recaller,
# vdqm and rtcpd in order to recall one of more files from tape.
###############################################################################

copy "sequence.pic";

# Define the objects
object(D,"rtcpcld");
object(V,"vdqm");
object(R,"rtcpd");
placeholder_object(C);

step();

# Message sequences
active(D);
message(D,V,"connect");
active(V);
message(D,V,"volume request");
message(V,D,"acknowledge");
message(V,D,"volReqID");
message(D,V,"acknowledge");
message(D,V,"disconnect");
inactive(V);

step();

active(V);
message(V,R,"connect");
active(R);
message(V,R,"RcpJob");
message(R,V,"RcpJobReply");
message(R,V,"disconnect");
inactive(V);

message(R,D,"connect");
message(D,R,"request volReqId");
message(R,D,"acknowledge");
message(R,D,"volReqId");
message(D,R,"acknowledge");

create_message(D,C,"recaller");
active(C);
message(C,R,"client info");
message(R,C,"acknowledge");
message(C,R,"disconnect");


message(R,C,"connect");
message(C,R,"volume");
message(R,C,"acknowledge");

message(C,R,"file");
message(R,C,"acknowledge");

message(C,R,"no more work");
message(R,C,"acknowledge");

inactive(R);
inactive(C);
inactive(D);

complete(D);
complete(V);
complete(R);
complete(C);

.PE

