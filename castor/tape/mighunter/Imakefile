CPPFLAGS += $(ORACLE_CPPFLAGS) $(PYTHON_INC)
AddLdFlags($(PYTHON_LIBS) -L$(ORACLE_LIBDIR) -locci -lclntsh -lstdc++)

DependsOnLibrary(castor,castorclient)
DependsOnLibrary(castor/db/cnv,castorcnvs)
DependsOnLibrary(common,castorcommon)
DependsOnLibrary(castor/db/newora,castorcommonora)
DependsOnLibrary(dlf,castordlf)
DependsOnLibrary(ns,castorns)
DependsOnLibrary(castor/tape/python,castortapepython)
DependsOnLibrary(castor/tape/utils,castortapeutils)

MIGHUNTERDAEMONBIN_SRCS = \
  IdToTapePoolForStreamPolicyMap.cpp \
  MigHunterDaemon.cpp \
  MigHunterDlfMessageStrings.cpp \
  MigHunterMain.cpp \
  MigHunterThread.cpp \
  StreamThread.cpp \
  ora/OraMigHunterSvc.cpp

MIGHUNTERDAEMONBIN_OBJS = $(MIGHUNTERDAEMONBIN_SRCS:.cpp=.o)

NormalProgramTarget(mighunterd,$(MIGHUNTERDAEMONBIN_OBJS),,,755)
MakeDir(LogPath,0755)
ADMMANPAGE(mighunterd)
LOGROTATE(castor-mighunter-server,install)
SYSCONFIG(mighunterd,install)
INITSCRIPT(mighunterd,install)
EXAMPLEFILE(migration.py,/etc/castor/policies,install)
EXAMPLEFILE(stream.py,/etc/castor/policies,install)
