CXXFLAGS += -I $(ORACLE_HOME)/rdbms/public $(PYTHONINC) $(MTCCFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++
LIBS = -L$(ORACLE_HOME)/lib -locci -lclntsh 

DependsOnLibrary(..,castorclient)
DependsOnLibrary(../db/cnv,castorcnvs)
DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../db/newora,castorcommonora)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(../tape/python,castortapepython)
DependsOnLibrary(../tape/utils,castortapeutils)

MIGHUNTERDAEMONBIN_SRCS = \
  MigHunterDaemon.cpp \
  MigHunterDlfMessageStrings.cpp \
  MigHunterMain.cpp \
  MigHunterThread.cpp \
  StreamThread.cpp \
  ora/OraMigHunterSvc.cpp

MIGHUNTERDAEMONBIN_OBJS = $(MIGHUNTERDAEMONBIN_SRCS:.cpp=.Osuf)

NormalProgramTarget(mighunterd,$(MIGHUNTERDAEMONBIN_OBJS),$(DEPLIB),$(LIBS),750)
MakeDir(/var/log/castor,0755)
ADMMANPAGE(mighunterd)
LOGROTATE(castor-mighunter-server,../../..,install)
SYSCONFIG(mighunterd,install)
INITSCRIPT(mighunterd,install)
EXAMPLEFILE(migration.py,../../../debian,/etc/castor/policies,install)
EXAMPLEFILE(stream.py,../../../debian,/etc/castor/policies,install)
