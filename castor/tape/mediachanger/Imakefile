CDKLIB = -L$(LIBDIR)/CDK -lapi -lcl -lipc -lutl

DependsOnLibrary(castor/tape/utils,castortapeutils)
DependsOnLibrary(common,castorcommon)

ACS_SRCS = \
  Acs.cpp \
  AcsImpl.cpp

COMPILECPP(Acs.cpp, -DLINUX -I/usr/include/CDK)
COMPILECPP(AcsImpl.cpp, -DLINUX -I/usr/include/CDK)

ACSCOMMAND_SRCS = \
  AcsCmd.cpp

COMPILECPP(AcsCmd.cpp, -DLINUX -I/usr/include/CDK)

MOUNTACSBIN_SRCS = \
  $(ACS_SRCS) \
  $(ACSCOMMAND_SRCS) \
  MountAcsCmdLine.cpp \
  MountAcsCmd.cpp \
  MountAcsMain.cpp
MOUNTACSBIN_OBJS = $(MOUNTACSBIN_SRCS:.cpp=.o)

COMPILECPP(MountAcsCmdLine.cpp, -DLINUX -I/usr/include/CDK)
COMPILECPP(MountAcsCmd.cpp, -DLINUX -I/usr/include/CDK)
COMPILECPP(MountAcsMain.cpp, -DLINUX -I/usr/include/CDK)

NormalProgramTarget(mountacs,$(MOUNTACSBIN_OBJS),,$(CDKLIB),755)
EXEMANPAGE(mountacs)

DISMOUNTACSBIN_SRCS = \
  $(ACS_SRCS) \
  $(ACSCOMMAND_SRCS) \
  DismountAcsCmdLine.cpp \
  DismountAcsCmd.cpp \
  DismountAcsMain.cpp
DISMOUNTACSBIN_OBJS = $(DISMOUNTACSBIN_SRCS:.cpp=.o)
COMPILECPP(DismountAcsCmdLine.cpp, -DLINUX -I/usr/include/CDK)
COMPILECPP(DismountAcsCmd.cpp, -DLINUX -I/usr/include/CDK)
COMPILECPP(DismountAcsMain.cpp, -DLINUX -I/usr/include/CDK)

NormalProgramTarget(dismountacs,$(DISMOUNTACSBIN_OBJS),,$(CDKLIB),755)
EXEMANPAGE(dismountacs)

QUERYVOLUMEACSBIN_SRCS = \
  $(ACS_SRCS) \
  $(ACSCOMMAND_SRCS) \
  QueryVolumeAcsCmdLine.cpp \
  QueryVolumeAcsCmd.cpp \
  QueryVolumeAcsMain.cpp
QUERYVOLUMEACSBIN_OBJS = $(QUERYVOLUMEACSBIN_SRCS:.cpp=.o)
COMPILECPP(QueryVolumeAcsCmdLine.cpp, -DLINUX -I/usr/include/CDK)
COMPILECPP(QueryVolumeAcsCmd.cpp, -DLINUX -I/usr/include/CDK)
COMPILECPP(QueryVolumeAcsMain.cpp, -DLINUX -I/usr/include/CDK)

NormalProgramTarget(queryvolumeacs,$(QUERYVOLUMEACSBIN_OBJS),,$(CDKLIB),755)
EXEMANPAGE(queryvolumeacs)
