CPPFLAGS += -I $(ORACLE_HOME)/rdbms/public $(PYTHONINC)
LDFLAGS = -L$(ORACLE_HOME)/lib -locci -lclntsh 

DependsOnLibrary(castor,castorclient)
DependsOnLibrary(castor/db/cnv,castorcnvs)
DependsOnLibrary(common,castorcommon)
DependsOnLibrary(castor/db/newora,castorcommonora)
DependsOnLibrary(dlf,castordlf)
DependsOnLibrary(castor/tape/python,castortapepython)
DependsOnLibrary(castor/tape/utils,castortapeutils)
DependsOnLibrary(vdqm,castorvdqm)

RECHANDLERDAEMONBIN_SRCS = \
	RecHandlerDaemon.cpp \
	RecHandlerDlfMessageStrings.cpp \
	RecHandlerMain.cpp \
	RecHandlerThread.cpp \
	ora/OraRecHandlerSvc.cpp   

RECHANDLERDAEMONBIN_OBJS = $(RECHANDLERDAEMONBIN_SRCS:.cpp=.o)
NormalProgramTarget(rechandlerd,$(RECHANDLERDAEMONBIN_OBJS),,,750)
MakeDir(/var/log/castor,0755)
ADMMANPAGE(rechandlerd)
LOGROTATE(castor-rechandler-server,../../..,install)
SYSCONFIG(rechandlerd,install)
INITSCRIPT(rechandlerd,install)
EXAMPLEFILE(rechandler.py,../../../debian,/etc/castor/policies,install)
