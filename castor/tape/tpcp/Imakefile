READTPBIN_OBJS = $(READTPBIN_SRCS:.cpp=.Osuf)

WRITETPBIN_SRCS = \
  ../net/net.cpp \
  ../utils/utils.cpp \
  Action.cpp \
  ActionHandler.cpp \
  Dumper.cpp \
  Helper.cpp \
  Migrator.cpp \
