DUMPTPBIN_SRCS = \
  ../net/net.cpp \
  ../utils/utils.cpp \
  Action.cpp \
  ActionHandler.cpp \
  Dumper.cpp \
  DumpTpCommand.cpp \
  Helper.cpp \
  Migrator.cpp \
  Recaller.cpp \
  StreamHelper.cpp \
