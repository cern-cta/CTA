LD = g++

DependsOnLibrary(..,castorclient)
DependsOnLibrary(../tape/gatewayprotocol,castortapegatewayprotocol)
DependsOnLibrary(../tape/utils,castortapeutils)
DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(../../rfio,castorrfio)
DependsOnLibrary(../../vdqm,castorvdqm)
DependsOnLibrary(../../vmgr,castorvmgr)

DUMPTPBIN_SRCS = \
  ../net/net.cpp \
  Action.cpp \
  DumpTpCommand.cpp \
  DumpTpMain.cpp \
  Helper.cpp \
  StreamHelper.cpp \
  StreamOperators.cpp \
  TapeFileSequenceParser.cpp \
  TapeFseqRange.cpp \
  TapeFseqRangeListSequence.cpp \
  TapeFseqRangeSequence.cpp \
  TpcpCommand.cpp
DUMPTPBIN_OBJS = $(DUMPTPBIN_SRCS:.cpp=.Osuf)

READTPBIN_SRCS = \
  ../net/net.cpp \
  Action.cpp \
  Helper.cpp \
  ReadTpCommand.cpp \
  ReadTpMain.cpp \
  StreamHelper.cpp \
  StreamOperators.cpp \
  TapeFileSequenceParser.cpp \
  TapeFseqRange.cpp \
  TapeFseqRangeListSequence.cpp \
  TapeFseqRangeSequence.cpp \
  TpcpCommand.cpp
READTPBIN_OBJS = $(READTPBIN_SRCS:.cpp=.Osuf)

WRITETPBIN_SRCS = \
  ../net/net.cpp \
  Action.cpp \
  Helper.cpp \
  StreamHelper.cpp \
  StreamOperators.cpp \
  TapeFileSequenceParser.cpp \
  TapeFseqRange.cpp \
  TapeFseqRangeListSequence.cpp \
  TapeFseqRangeSequence.cpp \
  TpcpCommand.cpp \
  WriteTpCommand.cpp \
  WriteTpMain.cpp
WRITETPBIN_OBJS = $(WRITETPBIN_SRCS:.cpp=.Osuf)

NormalProgramTarget(dumptp,$(DUMPTPBIN_OBJS),$(DEPLIB),$(LIBS),750)
EXEMANPAGE(dumptp)

NormalProgramTarget(readtp,$(READTPBIN_OBJS),$(DEPLIB),$(LIBS),750)
EXEMANPAGE(readtp)

NormalProgramTarget(writetp,$(WRITETPBIN_OBJS),$(DEPLIB),$(LIBS),750)
EXEMANPAGE(writetp)
