DUMPTPBIN_OBJS = $(DUMPTPBIN_SRCS:.cpp=.Osuf)

READTPBIN_SRCS = \
  ../net/net.cpp \
  ../utils/utils.cpp \
  Action.cpp \
  ActionHandler.cpp \
  Dumper.cpp \
