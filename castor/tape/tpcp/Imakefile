NormalProgramTarget(dumptp,$(DUMPTPBIN_OBJS),$(DEPLIB),$(LIBS),750)
EXEMANPAGE(dumptp)

NormalProgramTarget(readtp,$(READTPBIN_OBJS),$(DEPLIB),$(LIBS),750)
EXEMANPAGE(readtp)

NormalProgramTarget(writetp,$(WRITETPBIN_OBJS),$(DEPLIB),$(LIBS),750)
EXEMANPAGE(writetp)
