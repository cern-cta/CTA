AGGREGATORBIN_SRCS = \
  AggregatorDlfMessageStrings.cpp \
  AggregatorDaemon.cpp \
  AggregatorMain.cpp \
  BridgeProtocolEngine.cpp \
  BoolFunctor.cpp \
  ClientTxRx.cpp \
  DriveAllocationProtocolEngine.cpp \
  LogHelper.cpp \
  Packer.cpp \
  RcpJobSubmitter.cpp \
  RtcpMarshaller.cpp \
  RtcpTxRx.cpp \
  SmartFd.cpp \
  SmartFdList.cpp \
  SynchronizedCounter.cpp \
  Unpacker.cpp \
