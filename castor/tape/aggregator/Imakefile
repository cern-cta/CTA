CPPFLAGS = -pedantic -Wall -Werror -g -O0 -I../../../h -I../../.. $(MTCCFLAGS)
CFLAGS = -O -I../../../h -I../../.. $(THREADFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(..,castorclient)
DependsOnLibrary(../db/cnv,castorcnvs)

AGGREGATORBIN_SRCS = \
  AggregatorDlfMessageStrings.cpp \
  AggregatorDaemon.cpp \
  AggregatorMain.cpp \
  Marshaller.cpp \
  RCPJobSubmitter.cpp \
  RequestHandlerThread.cpp \
  SocketHelper.cpp \
  exception/RTCPDErrorMessage.cpp
AGGREGATORBIN_OBJS = $(AGGREGATORBIN_SRCS:.cpp=.Osuf)

NormalProgramTarget(aggregatord,$(AGGREGATORBIN_OBJS),$(DEPLIB),$(LIBS),root,bin,750)
EXEMANPAGE(aggregatord)
