#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(FileName(FileName(..,..),..),h) -I FileName(FileName(..,..),..)
CPPFLAGS = -pedantic -Wall -Werror $(DEBUG) $(INCLUDES) $(MTCCFLAGS)
CFLAGS = -O -I$(INCLUDES) $(THREADFLAGS)

LIBS = -lshift -lcastorCnvs -Wl,-rpath-link,FileName(FileName(FileName(..,..),..),shlib)

AGGREGATORBIN_SRCS = \
  AggregatorDlfMessageStrings.cpp \
  AggregatorDaemon.cpp \
  AggregatorMain.cpp \
  Marshaller.cpp \
  RequestHandlerThread.cpp \
  SocketHelper.cpp

MANPAGES_AGGREGATOR = FileName($(MANDIR),aggregatord.$(MANSUFFIX))
EMANPAGES_AGGREGATOR = FileName($(EXPORTMAN),FileName(man$(MANSUFFIX),aggregatord.$(MANSUFFIX)))

AGGREGATORBIN_OBJS = $(AGGREGATORBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(FileName(FileName(..,..),shlib),shift)

LDFLAGS += -L FileName(FileName(FileName(..,..),..),shlib) $(MTLDFLAGS)
LD = g++

all: ProgramTargetName(aggregatord)

NormalProgramTarget(aggregatord,$(AGGREGATORBIN_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(FileName(..,shlib),shift)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(AGGREGATORBIN_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),aggregatord)

InstallProgram(aggregatord,$(BIN),root,bin,750)

install.man: $(MANDIR) $(MANPAGES_AGGREGATOR)
MakeDir($(MANDIR),root,bin,0755)
IMANPAGE(aggregatord,$(MANDIR),$(MANSUFFIX))

exportman: $(EMANPAGES_AGGREGATOR)

EMANPAGE(aggregatord,FileName($(EXPORTMAN),man$(MANSUFFIX)),$(MANSUFFIX))

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean $(AGGREGATORBIN_OBJS))

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(aggregatord))

FORCE:

