/var/log/castor/stagerd*.log {
    compress
    daily
    missingok
    rotate 500
    delaycompress
    postrotate
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}

/var/log/castor/repackd*.log {
