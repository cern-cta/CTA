#include <Project.tmpl>

DEBUG  = -g -O0
#MANPAGES = 
#EXPORTMANPAGES = 

INCLUDES = -I FileName(../../..,h) -I FileName(../..,..)

CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) -DORACDBC=1

LIBS = -lshift -lcastorCnvs -lcastorClient
DBSERVICEDAEMONBIN_SRCS = \
	CnsHelper.cpp \
	GetHandler.cpp \
	JobRequestHandler.cpp \
	StagerDaemon.cpp \
	PrepareToGetHandler.cpp \
	PrepareToPutHandler.cpp \
	PrepareToUpdateHandler.cpp \
	PutDoneHandler.cpp \
	PutHandler.cpp \
	RepackHandler.cpp \
	ReplyHelper.cpp \
	RequestHelper.cpp \
	RmHandler.cpp \
	SetGCWeightHandler.cpp \
	UpdateHandler.cpp \
	RequestHandler.cpp \
	BaseRequestSvcThread.cpp \
	PrepRequestSvcThread.cpp \
	StageRequestSvcThread.cpp \
	JobRequestSvcThread.cpp \
	QueryRequestSvcThread.cpp \
	GcSvcThread.cpp \
	ErrorSvcThread.cpp \
        JobSvcThread.cpp \
	CleaningThread.cpp

DBSERVICEDAEMONBIN_OBJS = $(DBSERVICEDAEMONBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(../../shlib,castorCnvs) \
         DepSharedLibraryTargetName(../../castor,castorClient) \
         DepSharedLibraryTargetName(../../shlib,shift)

LDFLAGS += -L FileName(../../..,shlib) -L FileName(../../..,$(COMMONCPPDIR)) $(MTLDFLAGS)
LD = g++
GLOBLIB = -lshift -lcastorCnvs -lcastorClient

PROGS_STAGER = ProgramTargetName(stagerDaemon)
IPROGS_STAGER = FileName($(BIN),ProgramTargetName(stagerDaemon))

all:$(DBSERVICEDAEMONBIN_OBJS) $(PROGS_STAGER)

MakeDepSharedLibrary(../../shlib,castorCnvs)
MakeDepSharedLibrary(../../shlib,shift)

NormalProgramTarget(stagerDaemon,$(DBSERVICEDAEMONBIN_OBJS),$(DEPLIB),$(GLOBLIB))

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(DBSERVICEDAEMONBIN_SRCS) 2> /dev/null
#endif

install: $(BIN) $(IPROGS_STAGER)

InstallProgram(stagerDaemon,$(BIN),root,bin,0750)
MakeDir($(BIN),root,bin,0755)

install.man: $(MANDIR) $(MANPAGES)

exportman: $(EXPORTMANPAGES)

clean:
	@echo  in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(PROGS_STAGER))

FORCE:

