# Make Castor stagerDBService daemon
#
# @author Castor Dev team, castor-dev@cern.ch
#

#include <Project.tmpl>

DEBUG  = -g -O0
#MANPAGES = 
#EXPORTMANPAGES = 

INCLUDES = -I FileName(../../..,h) -I FileName(../..,..)

CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) -DORACDBC=1

LIBS = -lshift -lcastorCnvs 
DBSERVICEDAEMONBIN_SRCS = \
	StagerDBService.cpp\
	StagerRequestHelper.cpp\
	StagerCnsHelper.cpp\
	StagerReplyHelper.cpp\
	StagerJobRequestHandler.cpp\
	StagerGetHandler.cpp\
	StagerPrepareToGetHandler.cpp\
	StagerRepackHandler.cpp\
	StagerUpdateHandler.cpp\
	StagerPrepareToUpdateHandler.cpp\
	StagerPutHandler.cpp\
	StagerPrepareToPutHandler.cpp\
	StagerPutDoneHandler.cpp\
	StagerRmHandler.cpp\
	StagerSetGCHandler.cpp\
	StagerMainDaemon.cpp

DBSERVICEDAEMONBIN_OBJS = $(DBSERVICEDAEMONBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(../../shlib,castorCnvs) \
         DepSharedLibraryTargetName(../../shlib,shift)

LDFLAGS += -L FileName(../../..,shlib) $(MTLDFLAGS)
LD = g++
GLOBLIB = -L../shlib -lshift -lcastorCnvs

PROGS_STAGER = ProgramTargetName(stagerMainDaemon)
IPROGS_STAGER = FileName($(BIN),ProgramTargetName(stagerMainDaemon))

all:$(DBSERVICEDAEMONBIN_OBJS) $(PROGS_STAGER)

MakeDepSharedLibrary(../../shlib,castorCnvs)
MakeDepSharedLibrary(../../shlib,shift)

NormalProgramTarget(stagerMainDaemon,$(DBSERVICEDAEMONBIN_OBJS),$(DEPLIB),$(GLOBLIB))

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(DBSERVICEDAEMONBIN_SRCS) 2> /dev/null
#endif

install: $(BIN) $(IPROGS_STAGER)

InstallProgram(stagerMainDaemon,$(BIN),root,bin,0750)
MakeDir($(BIN),root,bin,0755)

install.man: $(MANDIR) $(MANPAGES)

exportman: $(EXPORTMANPAGES)

clean:
	@echo rmmaster in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(PROGS_STAGER))

FORCE:

