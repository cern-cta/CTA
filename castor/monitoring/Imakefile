DependsOnLibrary(common,castorcommon)
DependsOnLibrary(castor,castorclient)

MONLIB_SRCS = ClusterStatus.cpp \
              DiskServerStatus.cpp \
              FileSystemStatus.cpp \
              FileSystemRating.cpp \
              ClusterStatusBlockKey.cpp \
              DiskServerMetricsReport.cpp \
              DiskServerStateReport.cpp \
              admin/DiskServerAdminReport.cpp \
              FileSystemMetricsReport.cpp \
              FileSystemStateReport.cpp \
              admin/FileSystemAdminReport.cpp \
              FileSystemStateAck.cpp \
              MonitorMessageAck.cpp \
              ../io/StreamDiskServerAdminReportCnv.cpp \
              ../io/StreamDiskServerMetricsReportCnv.cpp \
              ../io/StreamDiskServerStateReportCnv.cpp \
              ../io/StreamFileSystemAdminReportCnv.cpp \
              ../io/StreamFileSystemMetricsReportCnv.cpp \
              ../io/StreamFileSystemStateReportCnv.cpp \
              ../io/StreamFileSystemStateAckCnv.cpp \
              ../io/StreamMonitorMessageAckCnv.cpp
MONLIB_OBJS = $(MONLIB_SRCS:.cpp=.o)
SharedLibraryTarget(castormonitor,$(MONLIB_OBJS),,)

MONITORDEPLIBS = DepSharedLibraryTargetName(castor/monitoring,castormonitor)
NormalProgramTarget(rmGetNodes,RmGetNodes.o,$(MONITORDEPLIBS),$(MONITORDEPLIBS),755)
NormalProgramTarget(checkSharedMemory,checkSharedMemory.o,$(MONITORDEPLIBS),$(MONITORDEPLIBS),755)
NormalProgramTarget(dumpSharedMemory,DumpSharedMemory.o,$(MONITORDEPLIBS),$(MONITORDEPLIBS),755)

include LOCAL_PATH/rmmaster/Makefile
include LOCAL_PATH/rmnode/Makefile
include LOCAL_PATH/admin/Makefile
