CPPFLAGS = -g -O0 -I $(ORACLE_HOME)/rdbms/public -I ../../../h -I ../../.. $(MTCCFLAGS)
LDFLAGS += $(MTLDFLAGS)
LD = g++
LIBS = -lbat -llsf -llsbstream -L$(ORACLE_HOME)/lib -locci -lclntsh

DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(..,castorclient)
DependsOnLibrary(,castormonitor)
DependsOnLibrary(../db/newora,castorcommonora)
DependsOnLibrary(../db/cnv,castorcnvs)

RMMASTERDBIN_SRCS = RmMasterDaemon.cpp CollectorThread.cpp DatabaseActuatorThread.cpp UpdateThread.cpp HeartbeatThread.cpp LSFStatus.cpp ora/OraRmMasterSvc.cpp ora/StatusUpdateHelper.cpp
RMMASTERDBIN_OBJS = $(RMMASTERDBIN_SRCS:.cpp=.Osuf)
NormalProgramTarget(rmmasterd,$(RMMASTERDBIN_OBJS),$(DEPLIB),$(LIBS),750)
MakeDir(/var/spool/rmmaster,0755)
LOGROTATE(castor-rmmaster-server,../../..,install)
SYSCONFIG(rmmasterd,install)
INITSCRIPT(rmmasterd,install)
