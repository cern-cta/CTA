#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

#ifdef StagerSuperUser
STAGERSUPERUSER0 = StagerSuperUser
#else
STAGERSUPERUSER0 = stage
#endif
#ifdef StagerSuperGroup
STAGERSUPERGROUP0 = StagerSuperGroup
#else
STAGERSUPERGROUP0 = st
#endif
STAGERSUPERUSER  = -DSTAGERSUPERUSER=\"$(STAGERSUPERUSER0)\"
STAGERSUPERGROUP = -DSTAGERSUPERGROUP=\"$(STAGERSUPERGROUP0)\"

MANPAGES =
EXPORTMANPAGES =
INCLUDES = -I FileName(../../..,h) -I FileName(../..,..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) $(STAGERSUPERUSER) $(STAGERSUPERGROUP)

LIBS = -lcastorMonitor -lshift -Wl,-rpath-link,../../../shlib

RMNODEDAEMONBIN_SRCS = MetricsThread.cpp StateThread.cpp RmNodeDaemon.cpp
RMNODEDAEMONBIN_OBJS = $(RMNODEDAEMONBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(FileName(../..,shlib),castorMonitor) \
         DepSharedLibraryTargetName(FileName(../..,shlib),shift)

LDFLAGS += -L FileName(..,FileName(../..,shlib)) $(MTLDFLAGS)
LD = g++

all:ProgramTargetName(rmNodeDaemon)

NormalProgramTarget(rmNodeDaemon,$(RMNODEDAEMONBIN_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(FileName(../..,shlib),castorMonitor)
MakeDepSharedLibrary(FileName(../..,shlib),shift)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(RMNODEDAEMONBIN_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),rmNodeDaemon)

InstallProgram(rmNodeDaemon,$(BIN),root,bin,755)

install.man: $(MANDIR) $(MANPAGES)
MakeDir($(MANDIR),root,bin,0755)
IMANPAGE(rmNodeDaemon,$(MANDIR),$(MANSUFFIX))
EMANPAGE(rmNodeDaemon,$(EXPORTMAN)/man1,$(MANSUFFIX))

exportman: $(EXPORTMANPAGES)

clean:
	@echo rmnode in CurDir
	-@RemoveFiles(FilesToClean $(RMNODEDAEMONBIN_OBJS))

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(rmNodeDaemon))

FORCE:

