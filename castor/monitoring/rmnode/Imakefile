#ifdef StagerSuperUser
STAGERSUPERUSER0 = StagerSuperUser
#else
STAGERSUPERUSER0 = stage
#endif
#ifdef StagerSuperGroup
STAGERSUPERGROUP0 = StagerSuperGroup
#else
STAGERSUPERGROUP0 = st
#endif
STAGERSUPERUSER  = -DSTAGERSUPERUSER=\"$(STAGERSUPERUSER0)\"
STAGERSUPERGROUP = -DSTAGERSUPERGROUP=\"$(STAGERSUPERGROUP0)\"

CPPFLAGS = -g -O0 -I ../../../h -I ../../.. $(MTCCFLAGS) $(STAGERSUPERUSER) $(STAGERSUPERGROUP)
LDFLAGS += $(MTLDFLAGS)
LD = g++

DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(..,castorclient)
DependsOnLibrary(,castormonitor)

RMNODEDAEMONBIN_SRCS = MetricsThread.cpp StateThread.cpp RmNodeDaemon.cpp
RMNODEDAEMONBIN_OBJS = $(RMNODEDAEMONBIN_SRCS:.cpp=.Osuf)
NormalProgramTarget(rmNodeDaemon,$(RMNODEDAEMONBIN_OBJS),$(DEPLIB),$(LIBS),root,bin,750)
