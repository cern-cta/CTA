CPPFLAGS += $(STAGERSUPERUSER) $(STAGERSUPERGROUP)
LD = g++

DependsOnLibrary(../../common,castorcommon)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(..,castorclient)
DependsOnLibrary(,castormonitor)

RMNODEDBIN_SRCS = MetricsThread.cpp StateThread.cpp RmNodeDaemon.cpp
RMNODEDBIN_OBJS = $(RMNODEDBIN_SRCS:.cpp=.Osuf)
NormalProgramTarget(rmnoded,$(RMNODEDBIN_OBJS),$(DEPLIB),$(LIBS),750)
MakeDir(/var/log/castor,0755)
MakeDirWithOwnership(/var/spool/castor,stage,st,0755)
LOGROTATE(castor-rmnode-server,../../..,install)
SYSCONFIG(rmnoded,install)
INITSCRIPT(rmnoded,install)
