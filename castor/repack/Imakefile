INCLUDES = -I $(ORACLE_HOME)/rdbms/public -I ../../h -I ../..
CPPFLAGS = -g -O0 $(INCLUDES) $(MTCCFLAGS) -DDEFAULT_CNS=castorns -DORAREPACKCONFIGFILE=\"/etc/castor/ORAREPACKCONFIG\" -DORACDBC=1
LDFLAGS += $(MTLDFLAGS)
LD = g++
SERVLIBS = -L../db/newora -lcastorcommonora -lcastorcommonora -Wl,-rpath-link,../../shlib -L$(ORACLE_HOME)/lib -locci -lclntsh
SERVDEPLIB += DepSharedLibraryTargetName(db/newora,castorcommonora)

DependsOnLibrary(../common,castorcommon)
DependsOnLibrary(../dlf,castordlf)
DependsOnLibrary(,castorclient)
DependsOnLibrary(../vmgr,castorvmgr)
DependsOnLibrary(db/cnv,castorcnvs)

REPACKCOMMON_SRC = ../io/StreamRepackRequestCnv.cpp \
		../io/StreamRepackSubRequestCnv.cpp \
		../io/StreamRepackSegmentCnv.cpp \
		../io/StreamRepackResponseCnv.cpp \
                ../io/StreamRepackAckCnv.cpp \
		RepackSubRequestStatusCode.cpp \
                RepackCommandCode.cpp \
		RepackRequest.cpp \
		RepackSubRequest.cpp \
		RepackSegment.cpp \
                RepackAck.cpp \
		RepackResponse.cpp \
                FileListHelper.cpp \
                RepackUtility.cpp

REPACKSERVERBIN_SRCS =  RepackServer.cpp \
		RepackWorker.cpp \
		RepackFileStager.cpp \
		RepackMonitor.cpp \
		RepackCleaner.cpp \
		RepackFileChecker.cpp \
		ora/OraRepackSvc.cpp \
		../db/cnv/DbRepackRequestCnv.cpp \
		../db/cnv/DbRepackSegmentCnv.cpp \
		../db/cnv/DbRepackSubRequestCnv.cpp \
		$(REPACKCOMMON_SRC)
REPACKSERVERBIN_OBJS = $(REPACKSERVERBIN_SRCS:.cpp=.Osuf)
MakeDepSharedLibrary(db/newora,castorcommonora)
NormalProgramTarget(repackserver,$(REPACKSERVERBIN_OBJS),$(DEPLIB) $(SERVDEPLIB),$(LIBS) $(SERVLIBS),root,bin,750)

REPACKBIN_SRCS =  RepackClient.cpp ../io/ClientSocket.cpp $(REPACKCOMMON_SRC)
REPACKBIN_OBJS = $(REPACKBIN_SRCS:.cpp=.Osuf)
NormalProgramTarget(repack,$(REPACKBIN_OBJS),$(DEPLIB),$(LIBS),root,bin,755)

EXEMANPAGE(repack)
ADMMANPAGE(repackserver)
