#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

MANPAGES = $(MANDIR)/recHandlerDaemon.$(MANSUFFIX)
EXPORTMANPAGES = $(EXPORTMAN)/man1/recHandlerDaemon.$(MANSUFFIX)

CASTOR_HOME = ../../..
INCLUDES = -I FileName($(ORACLE_HOME)/rdbms,public) -I FileName(../../..,h) -I FileName(../..,..) $(PYTHONINC)

CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) 
LIBS = -lshift -lcastorCnvs -lcastorInfoPolicy -lcastorCommonOra -L$(ORACLE_HOME)/lib -locci -lclntsh -Wl,-rpath-link,../../../shlib
RECHANDLERDAEMONBIN_SRCS = \
	RecHandlerDaemon.cpp \
	RecHandlerThread.cpp 

RECHANDLERDAEMONBIN_OBJS = $(RECHANDLERDAEMONBIN_SRCS:.cpp=.Osuf)

DEPLIB = DepSharedLibraryTargetName(FileName(../..,shlib),shift) \
         DepSharedLibraryTargetName(FileName(../..,shlib),castorCnvs) \
         DepSharedLibraryTargetName(FileName(../..,shlib),castorCommonOra) \
         DepSharedLibraryTargetName(FileName(../..,shlib),castorInfoPolicy)

LDFLAGS += -L FileName(../../..,shlib) $(MTLDFLAGS) 
LD = g++

all:ProgramTargetName(recHandlerDaemon)

NormalProgramTarget(recHandlerDaemon,$(RECHANDLERDAEMONBIN_OBJS),$(DEPLIB),$(LIBS))

MakeDepSharedLibrary(FileName(../..,shlib),shift)
MakeDepSharedLibrary(FileName(../..,shlib),castorCnvs)
MakeDepSharedLibrary(FileName(../..,shlib),castorInfoPolicy)

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(RECHANDLERDAEMONBIN_SRCS) 2> /dev/null
#endif

install: FileName($(BIN),recHandlerDaemon)

InstallProgram(recHandlerDaemon,$(BIN),root,bin,755)

install.man: $(MANDIR) $(MANPAGES)
MakeDir($(MANDIR),root,bin,0755)
IMANPAGE(recHandlerDaemon,$(MANDIR),$(MANSUFFIX))
EMANPAGE(recHandlerDaemon,$(EXPORTMAN)/man1,$(MANSUFFIX))

exportman: $(EXPORTMANPAGES)

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles(ProgramTargetName(recHandlerDaemon))

FORCE:

