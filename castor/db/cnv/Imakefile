#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName(FileName(FileName(..,..),..),h) -I FileName(FileName(..,..),..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

# generated via ls *.cpp | gawk '{ print "     " $1 " \\" }'
CNVSLIB_SRCS = DbBaseAddressCnv.cpp \
            DbBaseCnv.cpp \
            DbCastorFileCnv.cpp \
            DbClientCnv.cpp \
            DbDisk2DiskCopyDoneRequestCnv.cpp \
            DbDiskCopyCnv.cpp \
            DbDiskPoolCnv.cpp \
            DbDiskServerCnv.cpp \
            DbFileClassCnv.cpp \
            DbFileSystemCnv.cpp \
            DbFiles2DeleteCnv.cpp \
            DbFilesDeletedCnv.cpp \
            DbFilesDeletionFailedCnv.cpp \
            DbGCFileCnv.cpp \
            DbGCLocalFileCnv.cpp \
            DbGetUpdateDoneCnv.cpp \
            DbGetUpdateFailedCnv.cpp \
            DbGetUpdateStartRequestCnv.cpp \
            DbMoverCloseRequestCnv.cpp \
            DbPutDoneStartCnv.cpp \
            DbPutFailedCnv.cpp \
            DbPutStartRequestCnv.cpp \
            DbQueryParameterCnv.cpp \
            DbSegmentCnv.cpp \
            DbStageAbortRequestCnv.cpp \
            DbStageFileQueryRequestCnv.cpp \
            DbStageFindRequestRequestCnv.cpp \
            DbStageGetNextRequestCnv.cpp \
            DbStageGetRequestCnv.cpp \
            DbStagePrepareToGetRequestCnv.cpp \
            DbStagePrepareToPutRequestCnv.cpp \
            DbStagePrepareToUpdateRequestCnv.cpp \
            DbStagePutDoneRequestCnv.cpp \
            DbStagePutNextRequestCnv.cpp \
            DbStagePutRequestCnv.cpp \
            DbStageReleaseFilesRequestCnv.cpp \
            DbStageRequestQueryRequestCnv.cpp \
            DbStageRmRequestCnv.cpp \
            DbStageUpdateNextRequestCnv.cpp \
            DbStageUpdateRequestCnv.cpp \
            DbStreamCnv.cpp \
            DbSubRequestCnv.cpp \
            DbSvcClassCnv.cpp \
            DbTapeCnv.cpp \
            DbTapeCopyCnv.cpp \
            DbTapePoolCnv.cpp \
            DbErrorHistoryCnv.cpp \
            ../DbBaseObj.cpp \
            ../DbCnvSvc.cpp \
            ../DbCommonSvc.cpp

#VDQM related objects
CNVSLIB_SRCS += DbClientIdentificationCnv.cpp \
            DbErrorHistoryCnv.cpp \
            DbDeviceGroupNameCnv.cpp \
            DbTapeAccessSpecificationCnv.cpp \
            DbTapeDriveCnv.cpp \
            DbTapeDriveCompatibilityCnv.cpp \
            DbTapeDriveDedicationCnv.cpp \
            DbTapeRequestCnv.cpp \
            DbTapeServerCnv.cpp

CNVSLIB_OBJS = $(CNVSLIB_SRCS:.cpp=.Osuf)

COMMONLIB = LibraryTargetName(castorCnvs)
LD = g++

all: $(COMMONLIB)

MakeDepSharedLibrary(FileName(FileName(..,..),shlib),shift)

NormalLibraryTarget(castorCnvs,$(CNVSLIB_OBJS))

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(CNVSLIB_SRCS) 2> /dev/null
#endif

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(COMMONLIB))

FORCE:

