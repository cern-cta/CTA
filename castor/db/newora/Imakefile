#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName($(ORACLE_HOME)/rdbms,demo) -I FileName($(ORACLE_HOME)/rdbms,public) -I FileName(FileName(FileName(..,..),..),h) -I FileName(FileName(..,..),..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) -DORASTAGERCONFIGFILE=\"OraStagerConfigFile\" -DORACDBC=1

ORALIB_SRCS = OraCnvSvc.cpp \
    	    OraStatement.cpp \
            OraResultSet.cpp \
            OraCommonSvc.cpp \
            ../ora/OraStagerSvc.cpp \
            OraTapeSvc.cpp \
            ../ora/OraJobSvc.cpp \
            ../ora/OraGCSvc.cpp \
            ../ora/OraFSSvc.cpp \
            ../ora/OraQuerySvc.cpp

ORALIB_OBJS = $(ORALIB_SRCS:.cpp=.Osuf)
COMMONLIB = LibraryTargetName(castorCommonOra)
LD = g++

#if BuildVDQMCpp
#VDQM related objects
ORAVDQMLIB_SRCS = ../ora/OraBaseObj.cpp \
		../ora/OraBaseCnv.cpp \
		../ora/OraCnvSvc.cpp \
		../ora/OraClientIdentificationCnv.cpp \
                ../ora/OraErrorHistoryCnv.cpp \
                ../ora/OraDeviceGroupNameCnv.cpp \
                ../ora/OraTapeAccessSpecificationCnv.cpp \
                ../ora/OraTapeDriveCnv.cpp \
                ../ora/OraTapeDriveCompatibilityCnv.cpp \
                ../ora/OraTapeDriveDedicationCnv.cpp \
                ../ora/OraTapeRequestCnv.cpp \
                ../ora/OraTapeServerCnv.cpp \
                ../ora/OraVdqmSvc.cpp

ORAVDQMLIB_OBJS = $(ORAVDQMLIB_SRCS:.cpp=.Osuf)
VDQMLIB = LibraryTargetName(castorVdqmOra)
#endif


all: $(COMMONLIB) $(VDQMLIB)

MakeDepSharedLibrary(FileName(FileName(..,..),shlib),shift)
MakeDepSharedLibrary(FileName(FileName(..,..),shlib),castorCnvs)

NormalLibraryTarget(castorCommonOra,$(ORALIB_OBJS))
#if BuildVDQMCpp
NormalLibraryTarget(castorVdqmOra,$(ORAVDQMLIB_OBJS))
#endif

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(ORALIB_SRCS) 2> /dev/null
#endif

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(COMMONLIB))

FORCE:

