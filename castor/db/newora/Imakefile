# Make Castor Oracle library for CDBC API
#
# @author Castor Dev team, castor-dev@cern.ch
#

CXXFLAGS += -I $(ORACLE_HOME)/rdbms/public $(MTCCFLAGS)
CPPFLAGS += -DORASTAGERCONFIGFILE=\"OraStagerConfigFile\"
LIBS = -L$(ORACLE_HOME)/lib -locci -lclntsh
LD = g++

DependsOnLibrary(cnv,castorcnvs)
DependsOnLibrary(../../dlf,castordlf)
DependsOnLibrary(../../vmgr,castorvmgr)

ORALIB_SRCS = OraCnvSvc.cpp \
            OraStatement.cpp \
            OraResultSet.cpp \
            OraCommonSvc.cpp \
            ../ora/OraRHSvc.cpp \
            ../ora/OraStagerSvc.cpp \
            ../ora/OraTapeSvc.cpp \
            ../ora/OraJobSvc.cpp \
            ../ora/OraGCSvc.cpp \
            ../ora/OraQuerySvc.cpp \
            DLFInit.cpp
ORALIB_OBJS = $(ORALIB_SRCS:.cpp=.Osuf)
SharedLibraryTarget(castorcommonora,$(ORALIB_OBJS),$(DEPLIB),$(LIBS))
CONFIGFILE(ORASTAGER,../../..,install)

LIBCOMMONORA = SharedLibraryTargetName(castorcommonora)
ORAVDQMLIB_SRCS = ../ora/OraVdqmSvc.cpp
ORAVDQMLIB_OBJS = $(ORAVDQMLIB_SRCS:.cpp=.Osuf)
SharedLibraryTarget(castorvdqmora,$(ORAVDQMLIB_OBJS),$(LIBCOMMONORA) $(DEPLIB),$(LIBCOMMONORA) $(LIBS))
CONFIGFILE(ORAVDQM,../../..,install)
