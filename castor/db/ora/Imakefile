#include <Project.tmpl>

#if !defined(_WIN32)
#if linux
DEBUG  = -g -O0
#else
DEBUG  = -g
#endif
#endif

INCLUDES = -I FileName($(ORACLE_HOME)/rdbms,demo) -I FileName($(ORACLE_HOME)/rdbms,public) -I FileName(FileName(FileName(..,..),..),h) -I FileName(FileName(..,..),..)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS) -DORASTAGERCONFIGFILE=\"OraStagerConfigFile\"

ORALIB_SRCS = OraBaseAddressCnv.cpp \
            OraBaseCnv.cpp \
            OraBaseObj.cpp \
            OraCastorFileCnv.cpp \
            OraClientCnv.cpp \
            OraCnvSvc.cpp \
            OraDisk2DiskCopyDoneRequestCnv.cpp \
            OraDiskCopyCnv.cpp \
            OraDiskPoolCnv.cpp \
            OraDiskServerCnv.cpp \
            OraFileClassCnv.cpp \
            OraFileSystemCnv.cpp \
            OraFiles2DeleteCnv.cpp \
            OraFilesDeletedCnv.cpp \
            OraFilesDeletionFailedCnv.cpp \
            OraGCFileCnv.cpp \
            OraGCLocalFileCnv.cpp \
            OraGetUpdateDoneCnv.cpp \
            OraGetUpdateFailedCnv.cpp \
            OraGetUpdateStartRequestCnv.cpp \
            OraMoverCloseRequestCnv.cpp \
            OraPutDoneStartCnv.cpp \
            OraPutFailedCnv.cpp \
            OraPutStartRequestCnv.cpp \
            OraQueryParameterCnv.cpp \
            OraSegmentCnv.cpp \
            OraSetFileGCWeightCnv.cpp \
            OraStageAbortRequestCnv.cpp \
            OraStageFileQueryRequestCnv.cpp \
            OraStageFindRequestRequestCnv.cpp \
            OraStageGetNextRequestCnv.cpp \
            OraStageGetRequestCnv.cpp \
            OraStagePrepareToGetRequestCnv.cpp \
            OraStagePrepareToPutRequestCnv.cpp \
            OraStagePrepareToUpdateRequestCnv.cpp \
            OraStagePutDoneRequestCnv.cpp \
            OraStagePutNextRequestCnv.cpp \
            OraStagePutRequestCnv.cpp \
            OraStageReleaseFilesRequestCnv.cpp \
            OraStageRequestQueryRequestCnv.cpp \
            OraStageRmRequestCnv.cpp \
            OraStageUpdateNextRequestCnv.cpp \
            OraStageUpdateRequestCnv.cpp \
            OraStreamCnv.cpp \
            OraSubRequestCnv.cpp \
            OraSvcClassCnv.cpp \
            OraTapeCnv.cpp \
            OraTapeCopyCnv.cpp \
            OraTapePoolCnv.cpp \
            OraCommonSvc.cpp \
            OraStagerSvc.cpp \
            OraTapeSvc.cpp \
            OraJobSvc.cpp \
            OraGCSvc.cpp \
            OraFSSvc.cpp \
            OraQuerySvc.cpp

ORALIB_OBJS = $(ORALIB_SRCS:.cpp=.Osuf)

COMMONLIB = LibraryTargetName(castorCommonOra)
LD = g++

#if BuildVDQMCpp
#VDQM related objects
ORAVDQMLIB_SRCS += OraClientIdentificationCnv.cpp \
                OraErrorHistoryCnv.cpp \
                OraDeviceGroupNameCnv.cpp \
                OraTapeAccessSpecificationCnv.cpp \
                OraTapeDriveCnv.cpp \
                OraTapeDriveCompatibilityCnv.cpp \
                OraTapeDriveDedicationCnv.cpp \
                OraTapeRequestCnv.cpp \
                OraTapeServerCnv.cpp \
                OraVdqmSvc.cpp

ORAVDQMLIB_OBJS = $(ORAVDQMLIB_SRCS:.cpp=.Osuf)
VDQMLIB = LibraryTargetName(castorVdqmOra)
#endif

all: $(COMMONLIB) $(VDQMLIB)

MakeDepSharedLibrary(FileName(FileName(..,..),shlib),shift)

NormalLibraryTarget(castorCommonOra,$(ORALIB_OBJS))

#if BuildVDQMCpp
NormalLibraryTarget(castorVdqmOra,$(ORAVDQMLIB_OBJS))
#endif

Makefiles:

#if defined(_WIN32)
depend:
	@echo Not supported on this platform
#else
depend:
	makedepend $(INCLUDES) $(ORALIB_SRCS) 2> /dev/null
#endif

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(COMMONLIB))

FORCE:

