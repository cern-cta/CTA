#if !defined(_WIN32)
#if linux
DEBUG  = -g -O
#else
DEBUG  = -g
#endif
#endif

DEPLIB = DepSharedLibraryTargetName(..,castorClient)

INCLUDES = -I FileName($(ORACLE_HOME)/rdbms,demo) -I FileName($(ORACLE_HOME)/rdbms,public) -I FileName(../../..,h) -I FileName(../../..,)
CPPFLAGS = $(DEBUG) $(INCLUDES) $(MTCCFLAGS)

LIBS = -L$(ORACLE_HOME)/lib -locci -lclntsh -lcastorClient

ORALIB_OBJS = OraBaseCnv.Osuf \
              OraBlobRequestCnv.Osuf \
              OraClientCnv.Osuf \
              OraCnvSvc.Osuf \
              OraCopyCnv.Osuf \
              OraCuuidCnv.Osuf \
              OraFileCnv.Osuf \
              OraFlagCnv.Osuf \
              OraMessageAckCnv.Osuf \
              OraRequestHeaderCnv.Osuf \
              OraSegmentCnv.Osuf \
              OraStageInRequestCnv.Osuf \
              OraTapeInfoCnv.Osuf \
              OraTpFileInfoCnv.Osuf \
              OraTpInfoCnv.Osuf

COMMONLIB = SharedLibraryTargetName(castorCommonOra)
LDFLAGS = -L ../..
LD = g++

all: $(COMMONLIB)

SharedLibraryTarget(castorCommonOra,$(ORALIB_OBJS),$(DEPLIB),$(LIBS))

Makefiles:

clean:
	@echo cleaning in CurDir
	-@RemoveFiles(FilesToClean)

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(COMMONLIB))
