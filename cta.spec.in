%post -n cta-taped
%systemd_post cta-taped.service
%systemdDaemonReload
%systemdTryRestart cta-taped.service

%preun -n cta-taped
%systemd_preun cta-taped.service

%postun -n cta-taped
%systemd_postun cta-taped.service
%systemdDaemonReload

