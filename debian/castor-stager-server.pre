if [ -f /etc/rc.d/init.d/stager ]; then
    /sbin/service stager stop > /dev/null 2>&1 || :
fi
if [ -d /var/spool/stager ]; then
    /bin/mkdir /var/log/castor 2>/dev/null
    for src in `ls /var/spool/stager/log.*.gz 2>/dev/null`; do
        dest=`basename $src | sed 's/log/stagerd.log/'`
        /bin/mv $src /var/log/castor/$dest 2>/dev/null
    done
    /bin/mv /var/spool/stager/log /var/log/castor/stagerd.log 2>/dev/null
    /bin/rmdir /var/spool/stager 2>/dev/null || :
fi
