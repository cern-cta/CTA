if [ -d /var/spool/rtcopy ]; then
    /bin/mkdir /var/log/castor 2>/dev/null
    for src in `ls /var/spool/rtcopy/rtcopyd.*.gz 2>/dev/null`; do
        dest=`basename $src | sed 's/rtcopyd/rtcpcd/'`
        /bin/mv $src /var/log/castor/$dest 2>/dev/null
    done
    /bin/mv /var/spool/rtcopy/rtcopyd.log /var/log/castor/rtcpcd.log 2>/dev/null
    /bin/chmod 644 /var/log/castor/rtcpcd.* 2>/dev/null
    /bin/rmdir /var/spool/rtcopy 2>/dev/null || :
fi
