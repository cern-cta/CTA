if [ -f /etc/rc.d/init.d/Cupvdaemon ]; then
    /sbin/service Cupvdaemon stop > /dev/null 2>&1 || :
fi
if [ -d /var/spool/upv ]; then
    /bin/mkdir /var/log/castor 2>/dev/null
    for src in `ls /var/spool/upv/log.*.gz 2>/dev/null`; do
        dest=`basename $src | sed 's/log/cupvd.log/'`
        /bin/mv $src /var/log/castor/$dest 2>/dev/null
    done
    /bin/mv /var/spool/upv/log /var/log/castor/cupvd.log 2>/dev/null
    /bin/rmdir /var/spool/upv 2>/dev/null || :
fi
