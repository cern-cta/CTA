if [ -f /etc/rc.d/init.d/vdqmserver ]; then
    /sbin/service vdqmserver stop > /dev/null 2>&1 || :
fi
if [ -d /var/spool/vdqm ]; then
    /bin/mkdir /var/log/castor 2>/dev/null
    for src in `ls /var/spool/vdqm/log.*.gz 2>/dev/null`; do
        dest=`basename $src | sed 's/log/vdqmd.log/'`
        /bin/mv $src /var/log/castor/$dest 2>/dev/null
    done
    /bin/mv /var/spool/vdqm/log /var/log/castor/vdqmd.log 2>/dev/null
    /bin/rmdir /var/spool/vdqm 2>/dev/null || :
fi
