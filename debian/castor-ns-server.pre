if [ -f /etc/rc.d/init.d/nsdaemon ]; then
    /sbin/service nsdaemon stop > /dev/null 2>&1 || :
fi
if [ -d /var/spool/ns ]; then
    /bin/mkdir /var/log/castor 2>/dev/null
    for src in `ls /var/spool/ns/log.*.gz 2>/dev/null`; do
        dest=`basename $src | sed 's/log/nsd.log/'`
        /bin/mv $src /var/log/castor/$dest 2>/dev/null
    done
    /bin/mv /var/spool/ns/log /var/log/castor/nsd.log 2>/dev/null
    /bin/rmdir /var/spool/ns 2>/dev/null || :
fi
