#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# Always exclude CVS so that we can build from a cvs workdir
export DH_ALWAYS_EXCLUDE=CVS


CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	$(MAKE) -f Makefile.ini Makefiles
	$(MAKE) depend
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE)
	#docbook-to-man debian/castor.sgml > castor.1

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) -f Makefile.ini Makefiles
	-$(MAKE) purge
	rm -rf $(CURDIR)/debian/castor
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/castor.
	mkdir -p $(CURDIR)/debian/castor/usr/bin
	mkdir -p $(CURDIR)/debian/castor/usr/lib
	mkdir -p $(CURDIR)/debian/castor/usr/include/shift
	mkdir -p $(CURDIR)/debian/castor/usr/share/man/man1
	mkdir -p $(CURDIR)/debian/castor/usr/share/man/man3
	mkdir -p $(CURDIR)/debian/castor/usr/share/man/man4
	mkdir -p $(CURDIR)/debian/castor/etc/castor
	mkdir -p $(CURDIR)/debian/castor/etc/sysconfig
	$(MAKE) install DESTDIR=$(CURDIR)/debian/castor
	$(MAKE) exportman DESTDIR=$(CURDIR)/debian/castor EXPORTMAN=$(CURDIR)/debian/castor/usr/share/man
	(cd clips; ../imake/imake -I../config DESTDIR=$(CURDIR)/debian/castor; make install DESTDIR=$(CURDIR)/debian/castor)
	install -o root -g bin -m 600 $(CURDIR)/debian/CUPVCONFIG $(CURDIR)/debian/castor/etc/castor
	install -o root -g bin -m 600 $(CURDIR)/debian/DLFCONFIG $(CURDIR)/debian/castor/etc/castor
	install -o root -g bin -m 600 $(CURDIR)/debian/EXPCONFIG $(CURDIR)/debian/castor/etc/castor
	install -o root -g bin -m 600 $(CURDIR)/debian/NSCONFIG $(CURDIR)/debian/castor/etc/castor
	install -o root -g bin -m 600 $(CURDIR)/debian/RMNODECONFIG $(CURDIR)/debian/castor/etc/castor
	install -o root -g bin -m 600 $(CURDIR)/debian/TPCONFIG $(CURDIR)/debian/castor/etc/castor
	install -o root -g bin -m 600 $(CURDIR)/debian/VMGRCONFIG $(CURDIR)/debian/castor/etc/castor
	install -o root -g bin -m 600 $(CURDIR)/castor/rh/rhserver.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/rhserver
	install -o root -g bin -m 600 $(CURDIR)/expert/expertd.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/expertd
	install -o root -g bin -m 600 $(CURDIR)/ns/nsdaemon.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/nsdaemon
	install -o root -g bin -m 600 $(CURDIR)/resourcemonitoring/rmmaster.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/rmmaster
	install -o root -g bin -m 600 $(CURDIR)/resourcemonitoring/rmnode.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/rmnode
	install -o root -g bin -m 600 $(CURDIR)/rfio/rfiod.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/rfiod
	install -o root -g bin -m 600 $(CURDIR)/rmc/rmcdaemon.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/rmcdaemon
	install -o root -g bin -m 600 $(CURDIR)/rtcopy/rtcpd.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/rtcpd
	install -o root -g bin -m 600 $(CURDIR)/stager/stager.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/stager
	install -o root -g bin -m 600 $(CURDIR)/tape/tpdaemon.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/tpdaemon
	install -o root -g bin -m 600 $(CURDIR)/upv/Cupvdaemon.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/Cupvdaemon
	install -o root -g bin -m 600 $(CURDIR)/vdqm/vdqmserv.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/vdqmserv
	install -o root -g bin -m 600 $(CURDIR)/vmgr/vmgrdaemon.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/vmgrdaemon
	install -o root -g bin -m 600 $(CURDIR)/job/stagerJob.sysconfig $(CURDIR)/debian/castor/etc/sysconfig/stagerJob

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
#	dh_installexamples
	dh_install --sourcedir=$(CURDIR)/debian/castor
#	dh_installmenu
#	dh_installdebconf	
	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
	dh_installinit --noscripts
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
#	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps -l$(CURDIR)/debian/castor/usr/lib
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
