if [ -f /etc/rc.d/init.d/rmNodeDaemon ]; then
    /sbin/service rmNodeDaemon stop > /dev/null 2>&1 || :
fi
if [ -d /var/spool/rmnode ]; then
    for src in `ls /var/spool/rmnode/log.*.gz 2>/dev/null`; do
        dest=`basename $src | sed 's/log/rmnoded.log/'`
        /bin/mv --reply=no $src /var/log/castor/$dest 2>/dev/null
    done
    /bin/mv --reply=no /var/spool/rmnode/log /var/log/castor/rmnoded.log 2>/dev/null
    /bin/rmdir /var/spool/rmnode 2>/dev/null || :
fi
