MakeDir($(DLFWEB)/db,root,bin,755)
MakeDir($(DLFWEB)/js,root,bin,755)
MakeDir($(DLFWEB)/images,root,bin,755)
MakeDir($(DLFCONF),root,bin,755)

InstallNonExecFile(login.conf.example,$(DLFCONF),root,apache,640)
InstallNonExecFile(config.php,$(DLFWEB),root,root,644)
InstallNonExecFile(dbview.php,$(DLFWEB),root,root,644)
InstallNonExecFile(index.php,$(DLFWEB),root,root,644)
InstallNonExecFile(query.php,$(DLFWEB),root,root,644)
InstallNonExecFile(results.php,$(DLFWEB),root,root,644)
InstallNonExecFile(site.css,$(DLFWEB),root,root,644)
InstallNonExecFile(utils.php,$(DLFWEB),root,root,644)

INSUBDIR=db/
InstallNonExecFile(oracle.php,$(DLFWEB)/db,root,root,644)

INSUBDIR=js/
InstallNonExecFile(CalendarPopup.js,$(DLFWEB)/js,root,root,644)
InstallNonExecFile(Date.js,$(DLFWEB)/js,root,root,644)

INSUBDIR=images/
InstallNonExecFile(backdrop.png,$(DLFWEB)/images,root,root,644)
InstallNonExecFile(css.png,$(DLFWEB)/images,root,root,644)
InstallNonExecFile(php.png,$(DLFWEB)/images,root,root,644)
InstallNonExecFile(xhtml.png,$(DLFWEB)/images,root,root,644)
