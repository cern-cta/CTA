FLAVOR=gcc32dbg
MOPTION=-m32
ifeq ($(shell uname -m), x86_64)
  FLAVOR=gcc64dbg
  MOPTION=-m64
endif

ifeq ("${GLOBUS_LOCATION}x","x")
  GLOBUS_LOCATION=/opt/globus
endif

INCLUDES = -I ../../h -I$(GLOBUS_LOCATION)/include/$(FLAVOR)
CFLAGS = -g -O0 $(MTCCFLAGS) $(INCLUDES) $(MOPTION) -fPIC
LDFLAGS  = -L$(GLOBUS_LOCATION)/lib $(MOPTION) -shared
LIBDIR = InstallLibDir

DSI_LIBDIR = $(GLOBUS_LOCATION)/lib
DSI_LIBNAME = globus_gridftp_server_CASTOR2ext_$(FLAVOR)
DSI_XINETDIR = /etc/xinetd.d
LIBS = -lglobus_ftp_control_$(FLAVOR)

MakeDepSharedLibrary(../common,castorcommon)
MakeDir($(DSI_LIBDIR),root,bin,0755)
PlacedSharedLibraryTarget($(DSI_LIBNAME),globus_gridftp_server_CASTOR2ext.Osuf,$(DEPLIB),$(LIBS),$(DSI_LIBDIR))

MakeDir($(DSI_XINETDIR),root,bin,0755)
InstallTarget(gsiftp,root,apache,640,$(DSI_XINETDIR))
