#include <Project.tmpl>

DEBUG  = -g -O0
FLAVOR=gcc32dbg
MOPTION=-m32
ifeq ($(shell uname -m), x86_64)
  FLAVOR=gcc64dbg
  MOPTION=-m64
endif

ifeq ("${GLOBUS_LOCATION}x","x")
  GLOBUS_LOCATION=/opt/globus
endif

INCLUDES = -I FileName(FileName(..,..),h) -I$(GLOBUS_LOCATION)/include/$(FLAVOR)
CFLAGS = $(DEBUG) $(MTCCFLAGS) $(INCLUDES) $(MOPTION) -fPIC
LDFLAGS  = -L$(GLOBUS_LOCATION)/lib $(MOPTION) -L ../../shlib -shared
LIBDIR = InstallLibDir

DSI_SRCS = globus_gridftp_server_CASTOR2ext.c
DSI_OBJS = $(DSI_SRCS:.c=.Osuf)
DSI_LIBNAME = globus_gridftp_server_CASTOR2ext_$(FLAVOR)
DSI_LIB = SharedLibraryTargetName($(DSI_LIBNAME))
DSI_LDLIBS = -lglobus_ftp_control_$(FLAVOR) -lshift -Wl,-rpath-link,../../shlib
DSI_DEPLIB = DepSharedLibraryTargetName(FileName(..,shlib),shift)
DSI_XINETDIR = /etc/xinetd.d
DSI_LIBDIR = $(GLOBUS_LOCATION)/lib

all: $(DSI_LIB)

MakeDepSharedLibrary(FileName(FileName(..,..),shlib),shift)
SharedLibraryTarget($(DSI_LIBNAME),$(DSI_OBJS),$(DSI_DEPLIB),$(DSI_LDLIBS))

Makefiles:

depend:
	makedepend $(INCLUDES) $(DSI_SRCS) 2> /dev/null

install:FileName($(DSI_LIBDIR),$(DSI_LIB)) FileName($(DSI_XINETDIR),gsiftp)

InstallTarget($(DSI_LIB),root,bin,0755,$(DSI_LIBDIR))

MakeDir($(DSI_XINETDIR),root,bin,0755)
InstallNonExecFile(gsiftp,$(DSI_XINETDIR),root,apache,640)

install.man:

exportman:

clean:
	@echo cleaning in CurDir
	-@RemoveFiles($(DSI_OBJS))

clobber:	clean
	@echo clobbering in CurDir
	-@RemoveFiles($(DSI_LIB))

FORCE:

