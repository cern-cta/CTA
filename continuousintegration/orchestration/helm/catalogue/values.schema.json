{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "description": "Override the default name of the chart."
    },
    "wipeCatalogue": {
      "type": "boolean",
      "description": "Determines if the catalogue should be wiped on start."
    },
    "component": {
      "type": "string",
      "description": "The component of the application (e.g., catalogue)."
    },
    "partOf": {
      "type": "string",
      "description": "The larger system that this application is part of (e.g., cta)."
    },
    "wipeImage": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "string",
          "description": "The Docker registry for the wipe image."
        },
        "repository": {
          "type": "string",
          "description": "The repository for the wipe image."
        },
        "tag": {
          "type": "string",
          "description": "The tag for the wipe image."
        },
        "pullPolicy": {
          "type": "string",
          "description": "The image pull policy (e.g., IfNotPresent)."
        },
        "pullSecrets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Image pull secrets to authenticate against the registry."
        }
      },
      "required": [
        "registry",
        "repository",
        "tag"
      ],
      "description": "Configuration for the wipe image used during catalogue wiping."
    },
    "catalogueServicePort": {
      "type": "integer",
      "description": "The port on which the catalogue service will run.",
      "default": 5432
    },
    "schemaVersion": {
      "type": "string",
      "description": "The schema version to be used by the catalogue service."
    },
    "configuration": {
      "anyOf": [
        {
          "type": "string",
          "description": "YAML configuration provided as a string (via --set-file)."
        },
        {
          "type": "object",
          "properties": {
            "backend": {
              "type": "string",
              "enum": [
                "sqlite",
                "oracle",
                "postgres"
              ],
              "description": "The type of backend to use (e.g., sqlite, oracle, postgres)."
            },
            "oracleConfig": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "description": "Oracle database username."
                },
                "database": {
                  "type": "string",
                  "description": "Oracle database name."
                },
                "password": {
                  "type": "string",
                  "description": "Oracle database password."
                }
              },
              "required": [
                "username",
                "database",
                "password"
              ],
              "description": "Oracle backend configuration."
            },
            "postgresConfig": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "description": "PostgreSQL database username."
                },
                "password": {
                  "type": "string",
                  "description": "PostgreSQL database password."
                },
                "server": {
                  "type": "string",
                  "description": "PostgreSQL server address."
                },
                "database": {
                  "type": "string",
                  "description": "PostgreSQL database name."
                }
              },
              "required": [
                "username",
                "password",
                "server",
                "database"
              ],
              "description": "PostgreSQL backend configuration."
            },
            "sqliteConfig": {
              "type": "object",
              "properties": {
                "filepath": {
                  "type": "string",
                  "description": "Filepath for the SQLite database."
                }
              },
              "required": [
                "filepath"
              ],
              "description": "SQLite backend configuration."
            }
          },
          "required": [
            "backend"
          ],
          "oneOf": [
            {
              "properties": {
                "backend": {
                  "enum": [
                    "oracle"
                  ]
                },
                "oracleConfig": {
                  "type": "object"
                }
              }
            },
            {
              "properties": {
                "backend": {
                  "enum": [
                    "postgres"
                  ]
                },
                "postgresConfig": {
                  "type": "object"
                }
              }
            },
            {
              "properties": {
                "backend": {
                  "enum": [
                    "sqlite"
                  ]
                },
                "sqliteConfig": {
                  "type": "object"
                }
              }
            }
          ]
        }
      ]
    }
  },
  "required": [
    "nameOverride",
    "wipeCatalogue",
    "component",
    "partOf",
    "wipeImage",
    "catalogueServicePort",
    "configuration"
  ]
}
