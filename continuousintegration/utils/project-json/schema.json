{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "CTA Project Metadata Schema",
    "type": "object",
    "required": [
        "name",
        "description",
        "summary",
        "license",
        "catalogueVersion",
        "supportedCatalogueVersions",
        "packageGroups",
        "platforms",
        "dev"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "summary": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "license": {
            "type": "string",
            "minLength": 1
        },
        "catalogueVersion": {
            "type": "number"
        },
        "supportedCatalogueVersions": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 1
        },
        "dev": {
            "type": "object",
            "required": [
                "cppVersion",
                "defaultBuildType",
                "eosServerChartVersion",
                "defaultEosImageTag",
                "defaultPlatform"
            ],
            "properties": {
                "cppVersion": {
                    "type": "string",
                    "minLength": 1
                },
                "defaultBuildType": {
                    "type": "string",
                    "minLength": 1
                },
                "eosServerChartVersion": {
                    "type": "string",
                    "minLength": 1
                },
                "defaultEosImageTag": {
                    "type": "string",
                    "minLength": 1
                },
                "defaultPlatform": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false
        },
        "packageGroups": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "platforms": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": [
                    "arch",
                    "buildImage",
                    "versionlock",
                    "buildRequires"
                ],
                "properties": {
                    "arch": {
                        "type": "string",
                        "minLength": 1
                    },
                    "buildImage": {
                        "type": "string",
                        "minLength": 1
                    },
                    "versionlock": {
                        "description": "These values are used to generate a versionlock.list file.",
                        "type": "object",
                        "additionalProperties": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "requires": {
                        "description": "These values are used to generate KEY_VERSION_CONSTRAINT cmake variables. Every key will be converted to uppercase, special characters converted to underscores and _VERSION_CONSTRAINT appended.",
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "buildRequires": {
                        "description": "These values are used to generate a list of BuildRequires items that are put in the cta.spec.in file.",
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}
