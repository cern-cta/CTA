'''command line printing the CASTOR database configuration'''

import sys
import getopt
import castor_tools

# usage function
def usage(exitCode):
    '''prints usage'''
    print 'Usage : ' + sys.argv[0] + ' [-h|--help] [-x|--extra]'
    sys.exit(exitCode)

# first parse the options
try:
    options, args = getopt.getopt(sys.argv[1:], 'hvx', ['help', 'verbose', 'extra'])
except Exception, e:
    print e
    usage(1)
verbose = False
extra = False
for f, v in options:
    if f == '-h' or f == '--help':
        usage(0)
    elif f == '-v' or f == '--verbose':
        verbose = True
    elif f == '-x' or f == '--extra':
        extra = True
    else:
        print "unknown option : " + f
        usage(1)

# Deal with arguments
if len(args) != 0:
    print 'Unexpected argument'
    usage(1)

try:
    # connect to stager and prepare statements
    stconn = castor_tools.connectToStager()
    stcur = stconn.cursor()
    sqlStatement = 'SELECT class, key, value, description FROM CastorConfig'
    stcur.execute(sqlStatement)
    # get results
    rows = stcur.fetchall()
    # loop over configs and print them
    titles = ['CLASS', 'KEY', 'VALUE']
    if extra:
        titles.append('DESCRIPTION')
    data = [row[0:len(titles)] for row in rows]
    if extra:
        castor_tools.prettyPrintTable(titles, data, lineFormat="%*s %*s %*s %-*s")
    else:
        castor_tools.prettyPrintTable(titles, data)
    # close DB connections
    try:
        castor_tools.disconnectDB(stconn)
    except Exception:
        pass
except Exception, e:
    print e
    if verbose:
        import traceback
        traceback.print_exc()
    sys.exit(-1)
