use strict;
use diagnostics;
use lib "/usr/lib/perl/CASTOR";
use castor_tools;
use POSIX;

# usage function
sub usage {
    printf("Usage : %s\n", $0);
}






###########################################################
# connect to the database                                 #
###########################################################

my @castor_conf = castor_conf_getOraStagerSvc();

#print "Using DB: $castor_conf[0] ,$castor_conf[1]\n";
my $dbh = DBI->connect('dbi:Oracle:',$castor_conf[0] ,$castor_conf[1]);



	
my $dbquery = <<EOF;
	
SELECT 
    ted.id,
    td.drivename,
    ts.servername,
    ted.euid, 
    ted.egid, 
    ted.accessmode, 
    ted.clienthost,
    ted.starttime,
    ted.endtime,
    ted.reason
    FROM tapedrive td, 
    tapeserver ts, 
    tapedrivededication ted
    WHERE td.tapeserver = ts.id
    AND ted.tapedrive = td.id
EOF
	    
my $sth = $dbh->prepare("$dbquery");
$sth->execute;
	
my @row;
my $rownum = 0;
my @ids;
# "ID\tDRIVE\t\t(uid/gid)\tMode\tHost\tStart\tEnd\tReason\n";
while (@row = $sth->fetchrow_array) {
    print "$row[0]\t";
    printf("%30s ", "$row[1]\@$row[2]");


    if (defined $row[3]) {
	print " uid=$row[3]";
    }
    if (defined $row[4]) {
	print " gid=$row[4]";
    }
    if (defined $row[5]) {
	print " mode=$row[5]";
    }
    if (defined $row[6]) {
	print " host=$row[6]";
    }
    
    print "\t" . strftime("%Y/%m/%d %H:%M", localtime($row[7])) . " -> " 
	. strftime("%Y/%m/%d %H:%M", localtime($row[8]));
    print " $row[9]";
    
    print "\n";
    $rownum++;
}
$sth->finish;


# Close DB connection
$dbh->disconnect;
