use strict;
use diagnostics;
use lib "/usr/lib/perl/CASTOR";
use castor_tools;

# usage function
sub usage {
  printf("Usage : %s [-h|--help] [-i|--fileId] [-d|--diskCopyId] diskServerName\n", $0);
}

# first parse the options
my $help;
my $giveFileId = 0;
my $giveDCId = 0;
if (0 == Getopt::Long::GetOptions ('h|help' => \$help,
                                   'i|fileId' => \$giveFileId,
                                   'd|diskCopyId' => \$giveDCId)) {
  usage();
  exit(1);
}

if ($help) {
  usage();
  exit(0);
}

# Check the arguments
if ($#ARGV != 0) {
  print("Error : wrong number of arguments\n");
  usage();
  exit;
}

#connect to the database and execute the query
my @castor_conf = castor_conf_getOraStagerSvc();
my $dbh = DBI->connect('dbi:Oracle:',$castor_conf[0] ,$castor_conf[1]);
my $dbquery;
if ($giveFileId) {
  $dbquery .= <<EOF;
SELECT FileSystem.mountPoint||DiskCopy.path, DiskCopy.status, DiskCopy.id, CastorFile.fileId, CastorFile.lastKnownFileName
  FROM FileSystem, DiskServer, DiskCopy, CastorFile
 WHERE FileSystem.diskServer = DiskServer.id
   AND DiskCopy.fileSystem = FileSystem.id
   AND DiskCopy.castorFile = Castorfile.id
   AND DiskServer.name = '$ARGV[0]'
EOF
} else {
  $dbquery .= <<EOF;
SELECT FileSystem.mountPoint||DiskCopy.path, DiskCopy.status, DiskCopy.id
  FROM FileSystem, DiskServer, DiskCopy
 WHERE FileSystem.diskServer = DiskServer.id
   AND DiskCopy.fileSystem = FileSystem.id
   AND DiskServer.name = '$ARGV[0]'
EOF
}

my $sth = $dbh->prepare("$dbquery");
$sth->execute;

# display Header
if ($giveFileId) { printf("%-10s ", "FileId"); }
if ($giveDCId) { printf("%-12s ", "DiskCopyId"); }
printf("%-20s %-50s ", "Status", "Physical FileName");
if ($giveFileId) { printf("%s", "HSM FileName"); }
printf("\n");

# display results
my @row;
my $statusStr = "";
while (@row = $sth->fetchrow_array) {
  if ($giveFileId) { printf("%-10lld ", $row[3]); }
  if ($giveDCId) { printf("%-12lld ", $row[2]); }
  if ($row[1] <= $#DiskCopyStatus) {
    $statusStr = $DiskCopyStatus[$row[1]];
  } else {
    $statusStr = "Unknown status : " . $row[1];
  }
  printf("%-20s %-50s ", $statusStr, $row[0]);
  if ($giveFileId) { printf("%s", $row[4]); }
  printf("\n");
}

# Close DB connection
$sth->finish;
$dbh->disconnect;
