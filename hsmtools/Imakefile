CKSUMLIB = -lz
DFLAGS = -DORAVDQMCONFIGFILE=\"/etc/castor/ORAVDQMCONFIG\" -g -pthread
CPPFLAGS = -I../h -I.. $(DFLAGS)
CFLAGS = $(CPPFLAGS)
LD = g++

RFIOFLAGS=$(STAGERSUPERUSER) $(STAGERSUPERGROUP)

DependsOnLibrary(common,castorcommon)
DependsOnLibrary(dlf,castordlf)
DependsOnLibrary(castor/db/cnv,castorcnvs)
DependsOnLibrary(ns,castorns)
DependsOnLibrary(castor,castorclient)
DependsOnLibrary(vmgr,castorvmgr)
DependsOnLibrary(rfio,castorrfio)

NormalProgramTarget(reclaim,reclaim.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(enterFileClass,enterFileClass.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(enterSvcClass,enterSvcClass.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(modifyFileClass,modifyFileClass.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(modifySvcClass,modifySvcClass.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(deleteFileClass,deleteFileClass.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(deleteSvcClass,deleteSvcClass.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(adler32,adler32.Osuf,$(DEPLIB),$(LIBS) $(CKSUMLIB),755)
NormalProgramTarget(c2probe,c2probe.Osuf,$(DEPLIB),-pthread $(LIBS),755)
NormalProgramTarget(listPriority,listPriority.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(enterPriority,enterPriority.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(deletePriority,deletePriority.Osuf,$(DEPLIB),$(LIBS),755)
rfcpupd.c: ../rfio/rfcp.c
	sed 's/| *O_TRUNC//' $< | sed 's/O_RDONLY/O_RDWR/' | sed 's/O_WRONLY/O_RDWR|O_APPEND/' > $@
rfcpupd.Osuf: rfcpupd.c
	$(CC) $(DEBUG) -I../h $(MTCCFLAGS) $(RFIOFLAGS) $(ACCTFLAG) -c -o $@ $<
FilesToClean += rfcpupd.c
NormalProgramTarget(rfcpupd,rfcpupd.Osuf,$(DEPLIB), $(LIBS),755)
NormalProgramTarget(stager_actualget,stager_actualget.Osuf,$(DEPLIB), $(LIBS),755)
NormalProgramTarget(stager_actualput,stager_actualput.Osuf,$(DEPLIB), $(LIBS),755)

NormalProgramTarget(vdqmDBInit,vdqmDBInit.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(vdqmsetpriority,vdqmsetpriority.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(vdqmdeletepriority,vdqmdeletepriority.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(vdqmlistpriority,vdqmlistpriority.Osuf,$(DEPLIB),$(LIBS),755)
NormalProgramTarget(vdqmlistrequest,vdqmlistrequest.Osuf,$(DEPLIB),$(LIBS),755)

InstallTarget(cleanLostFiles,755,$(BIN))
InstallTarget(diskServer_qry,755,$(BIN))
InstallTarget(listFileClass,755,$(BIN))
InstallTarget(listSvcClass,755,$(BIN))
InstallTarget(printFileClass,755,$(BIN))
InstallTarget(printSvcClass,755,$(BIN))
InstallTarget(moveDiskServer,755,$(BIN))
InstallTarget(dedicateTapeDrive,755,$(BIN))
InstallTarget(listDedications,755,$(BIN))
InstallTarget(checkreplicas,755,$(BIN))
InstallTarget(draindiskserver,755,$(BIN))
InstallTarget(migrateNewCopy,755,$(BIN))

InstallNonExecFile(castor_tools.pm,$(PERLLIBDIR),755)
InstallNonExecFile(castor_tools.py,$(PYTHONLIBDIR),644)

EXEMANPAGE(reclaim)
EXEMANPAGE(cleanLostFiles)
