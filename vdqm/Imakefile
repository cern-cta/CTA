COMM Makefile for the VDQM API library and client
COMM
COMM @author Castor Dev team, castor-dev@cern.ch

CommonDependsOnLibrary(common,castorcommon)

LOCAL_PATH/vdqmc_SendRecv.c: LOCAL_PATH/vdqm_SendRecv.c
	RemoveFiles($@)
	cp $< $@
PREFIX(FilesToClean) += LOCAL_PATH/vdqmc_SendRecv.c

VDQMLIB_OBJS = vdqmapi.o vdqmc_SendRecv.o
SharedLibraryTarget(castorvdqm,$(VDQMLIB_OBJS),,DepSharedLibraryTargetName(common,castorcommon))

VDQMLIB = DepSharedLibraryTargetName(vdqm,castorvdqm)

ClientProgramTarget(showqueues,showqueues.o,$(VDQMLIB),$(VDQMLIB),0755)
ClientProgramTarget(vdqm_admin,vdqm_admin.o,$(VDQMLIB),$(VDQMLIB),0755)

CLIENTLIBMANPAGE(vdqm_Connect)
CLIENTLIBMANPAGE(vdqm_DelDrive)
CLIENTLIBMANPAGE(vdqm_DelVolumeReq)
CLIENTLIBMANPAGE(vdqm_Disconnect)
CLIENTLIBMANPAGE(vdqm_NextDrive)
CLIENTLIBMANPAGE(vdqm_NextVol)
CLIENTLIBMANPAGE(vdqm_SendVolReq)
CLIENTLIBMANPAGE(vdqm_UnitStatus)
CLIENTEXEMANPAGE(showqueues)
CLIENTEXEMANPAGE(vdqm_admin)
