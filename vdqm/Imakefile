# Makefile for the VDQM API library and client
#
# @author Castor Dev team, castor-dev@cern.ch

LIBS = $(LDFLAGS) $(MTLDFLAGS) $(MTLDLIBS)
#if BuildSecureVdqm
SECURITYFLAG=-DCSEC
LDLIBS+= -ldl
#endif  
VDQM_HOST = VdqmHost
CFLAGS = -g -O -I../h $(MTCCFLAGS) -DVDQM_HOST=\"$(VDQM_HOST)\" $(SECURITYFLAG)

DependsOnLibrary(common,castorcommon)

#if BuildVdqmClient
VDQMLIB = -L. -lcastorvdqm
VDQMDEP = SharedLibraryTargetName(castorvdqm)
NormalProgramTarget(showqueues,showqueues.Osuf,$(VDQMDEP) $(DEPLIB),$(VDQMLIB) $(LIBS),root,bin,0755)
NormalProgramTarget(tpsrv_in_prod,tpsrv_in_prod.Osuf,$(VDQMDEP) $(DEPLIB),$(VDQMLIB) $(LIBS),root,bin,0750)
NormalProgramTarget(vdqm_admin,vdqm_admin.Osuf,$(VDQMDEP) $(DEPLIB),$(VDQMLIB) $(LIBS),root,bin,0750)
#endif

#if BuildVdqmLibrary
vdqmc_SendRecv.c:	vdqm_SendRecv.c
	RemoveFiles(vdqmc_SendRecv.c)
	$(CP) vdqm_SendRecv.c vdqmc_SendRecv.c
vdqmc_SendRecv.Osuf: vdqmc_SendRecv.c 
	$(CC) -c -I../h $(MTCCFLAGS) vdqmc_SendRecv.c
FilesToClean += vdqmc_SendRecv.c
VDQMLIB_OBJS = vdqmapi.Osuf vdqmc_SendRecv.Osuf
SharedLibraryTarget(castorvdqm,$(VDQMLIB_OBJS),$(DEPLIB),-L../common -lcastorcommon)
#endif

LIBMANPAGE(vdqm_Connect)
LIBMANPAGE(vdqm_DelDrive)
LIBMANPAGE(vdqm_DelVolumeReq)
LIBMANPAGE(vdqm_Disconnect)
LIBMANPAGE(vdqm_NextDrive)
LIBMANPAGE(vdqm_NextVol)
LIBMANPAGE(vdqm_SendVolReq)
LIBMANPAGE(vdqm_UnitStatus)
EXEMANPAGE(showqueues)
EXEMANPAGE(tpsrv_in_prod)
EXEMANPAGE(vdqm_admin)
